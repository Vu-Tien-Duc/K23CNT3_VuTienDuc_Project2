@model webBanSach.Models.NhaXuatBan
@{
    ViewData["Title"] = "Cập nhật Nhà Xuất Bản";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white d-flex align-items-center">
            <i class="bi bi-building me-2"></i>
            <h4 class="mb-0">@ViewData["Title"]</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post" class="row g-3">
                <input type="hidden" asp-for="MaNXB" />

                <div class="col-md-6">
                    <label asp-for="TenNXB" class="form-label fw-semibold"></label>
                    <input asp-for="TenNXB" class="form-control" placeholder="Nhập tên NXB..." />
                    <span asp-validation-for="TenNXB" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label asp-for="SDT" class="form-label fw-semibold"></label>
                    <input asp-for="SDT" class="form-control" placeholder="Số điện thoại liên hệ..." />
                </div>

                <div class="col-md-6">
                    <label asp-for="Email" class="form-label fw-semibold"></label>
                    <input asp-for="Email" class="form-control" type="email" placeholder="Email liên hệ..." />
                </div>

                <div class="col-md-6">
                    <label asp-for="DiaChi" class="form-label fw-semibold"></label>
                    <input asp-for="DiaChi" class="form-control" placeholder="Địa chỉ cụ thể..." />
                </div>

                <div class="col-12 text-end mt-3">
                    <button type="submit" class="btn btn-success px-4 me-2">
                        <i class="bi bi-check-circle"></i> Cập nhật
                    </button>
                    <a asp-action="Index" class="btn btn-secondary px-4">
                        <i class="bi bi-arrow-left-circle"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
