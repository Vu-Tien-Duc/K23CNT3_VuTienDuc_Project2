@model IEnumerable<webBanSach.Models.NhaXuatBan>

@{
    ViewData["Title"] = "Quản lý Nhà Xuất Bản";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchString" class="form-control" placeholder="Tìm theo tên NXB..." />
        <button type="submit" class="btn btn-primary">🔍 Tìm</button>
        <a asp-action="Create" class="btn btn-success ms-2">➕ Thêm NXB</a>
    </div>
</form>

<table class="table table-hover align-middle shadow-sm">
    <thead class="table-light">
        <tr>
            <th style="width:80px;">Mã NXB</th>
            <th>Tên NXB</th>
            <th>Địa chỉ</th>
            <th>Điện thoại</th>
            <th>Email</th>
            <th style="width:180px;">Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaNXB</td>
                <td>
                    <strong>@item.TenNXB</strong>
                </td>
                <td>@item.DiaChi</td>
                <td>@item.SDT</td>
                <td>@item.Email</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.MaNXB" class="btn btn-info btn-sm">👁️</a>
                    <a asp-action="Edit" asp-route-id="@item.MaNXB" class="btn btn-warning btn-sm">✏️</a>
                    <button type="button" class="btn btn-danger btn-sm"
                            data-bs-toggle="modal"
                            data-bs-target="#confirmDeleteModal"
                            data-id="@item.MaNXB"
                            data-name="@item.TenNXB">
                        🗑️
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal xác nhận xóa -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Xác nhận xóa</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <form id="deleteForm" method="post">
                <div class="modal-body">
                    Bạn có chắc chắn muốn xóa NXB <strong id="deleteItemName"></strong>?
                    <input type="hidden" name="id" id="deleteItemId" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var deleteModal = document.getElementById('confirmDeleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var id = button.getAttribute('data-id');
            var name = button.getAttribute('data-name');

            document.getElementById('deleteItemName').textContent = name;
            document.getElementById('deleteItemId').value = id;

            // POST tới /Admin/NhaXuatBan/Delete/{id}
            document.getElementById('deleteForm').action = '/Admin/NhaXuatBan/Delete/' + id;
        });
    </script>
}
