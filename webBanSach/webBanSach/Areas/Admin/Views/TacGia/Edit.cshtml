@model webBanSach.Models.TacGia

@{
    ViewData["Title"] = "Chỉnh sửa tác giả";
}

<div class="container mt-4">
    <h2 class="fw-bold text-dark mb-4">
        <i class="bi bi-pencil-square text-warning"></i> @ViewData["Title"]
    </h2>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="MaTG" />

                <div class="mb-3">
                    <label asp-for="TenTG" class="form-label fw-semibold">
                        <i class="bi bi-person"></i> Tên tác giả
                    </label>
                    <input asp-for="TenTG" class="form-control" placeholder="Nhập tên tác giả..." />
                    <span asp-validation-for="TenTG" class="text-danger"></span>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-warning text-white shadow-sm">
                        <i class="bi bi-save"></i> Cập nhật
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2 shadow-sm">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
