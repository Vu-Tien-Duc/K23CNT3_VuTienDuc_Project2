@model webBanSach.Models.TacGia

@{
    ViewData["Title"] = "Chi tiết tác giả";
}

<div class="container mt-4">
    <h2 class="fw-bold text-dark mb-4">
        <i class="bi bi-person-badge text-info"></i> @ViewData["Title"]
    </h2>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 text-muted">Mã tác giả</dt>
                <dd class="col-sm-9 fw-semibold">@Model.MaTG</dd>

                <dt class="col-sm-3 text-muted">Tên tác giả</dt>
                <dd class="col-sm-9 fw-semibold">@Model.TenTG</dd>
            </dl>
        </div>

        <div class="card-footer bg-white text-end">
            <a asp-action="Edit" asp-route-id="@Model.MaTG" class="btn btn-warning text-white shadow-sm me-2">
                <i class="bi bi-pencil"></i> Sửa
            </a>
            <a asp-action="Index" class="btn btn-secondary shadow-sm">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>
        </div>
    </div>
</div>
