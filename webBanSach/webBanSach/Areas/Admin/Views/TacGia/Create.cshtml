@model webBanSach.Models.TacGia

@{
    ViewData["Title"] = "Thêm tác giả";
}

<div class="container mt-4">
    <h2 class="fw-bold text-dark mb-4">
        <i class="bi bi-person-plus text-success"></i> @ViewData["Title"]
    </h2>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label asp-for="TenTG" class="form-label fw-semibold">
                        <i class="bi bi-person-lines-fill text-success"></i> Tên tác giả
                    </label>
                    <input asp-for="TenTG" class="form-control" placeholder="Nhập tên tác giả..." />
                    <span asp-validation-for="TenTG" class="text-danger"></span>
                </div>

                <div class="text-end">
                    <button type="submit" class="btn btn-success shadow-sm">
                        <i class="bi bi-save-fill"></i> Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2 shadow-sm">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
