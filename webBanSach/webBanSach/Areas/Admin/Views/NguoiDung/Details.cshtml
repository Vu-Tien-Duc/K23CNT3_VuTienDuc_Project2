@model webBanSach.Models.NguoiDung
@{
    ViewData["Title"] = "Chi tiết Người Dùng";
}

<div class="card shadow-lg border-0">
    <div class="card-header bg-dark text-white">
        <h4 class="mb-0">Thông tin chi tiết người dùng</h4>
    </div>
    <div class="card-body">
        <div class="row">
            <!-- Avatar -->
            <div class="col-md-4 text-center mb-3">
                @if (!string.IsNullOrEmpty(Model.HinhAnh))
                {
                    <img src="~/images/nguoidung/@Model.HinhAnh"
                         class="img-fluid rounded-circle border shadow-sm"
                         style="width:200px; height:200px; object-fit:cover;" />
                }
                else
                {
                    <img src="https://via.placeholder.com/200"
                         class="img-fluid rounded-circle border shadow-sm" />
                }

                <h5 class="mt-3">@Model.HoTen</h5>
                <p class="text-muted">@Model.Email</p>
            </div>

            <!-- Thông tin -->
            <div class="col-md-8">
                <ul class="list-group list-group-flush">
                    <li class="list-group-item">
                        <strong>Số điện thoại:</strong> @Model.SDT
                    </li>
                    <li class="list-group-item">
                        <strong>Địa chỉ:</strong> @Model.DiaChi
                    </li>
                    <li class="list-group-item">
                        <strong>Loại người dùng:</strong>
                        @if (Model.LoaiNguoiDung == "Admin")
                        {
                            <span class="badge bg-danger">Admin</span>
                        }
                        else if (Model.LoaiNguoiDung == "User")
                        {
                            <span class="badge bg-primary">User</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">@Model.LoaiNguoiDung</span>
                        }
                    </li>
                    <li class="list-group-item">
                        <strong>Trạng thái:</strong>
                        @if (Model.TrangThai == "HoatDong")
                        {
                            <span class="badge bg-success">Hoạt động</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Khóa</span>
                        }
                    </li>
                    <li class="list-group-item">
                        <strong>Ngày tạo:</strong> @Model.NgayTao?.ToString("dd/MM/yyyy")
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="card-footer text-end">
        <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
        <a asp-action="Edit" asp-route-id="@Model.MaND" class="btn btn-warning">Sửa</a>
    </div>
</div>
