@model IEnumerable<webBanSach.Models.NguoiDung>
@{
    ViewData["Title"] = "Quản lý Người Dùng";
}

<h2 class="mb-4">Danh sách người dùng</h2>
<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchString" class="form-control" placeholder="Tìm theo tên người dùng..." />
        <button type="submit" class="btn btn-primary">🔍 Tìm</button>
        <a asp-action="Create" class="btn btn-success ms-2">➕ Thêm Người Dùng</a>
    </div>
</form>

<table class="table table-striped table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Họ tên</th>
            <th>Email</th>
            <th>SĐT</th>
            <th>Loại</th>
            <th>Trạng thái</th>
            <th>Ảnh</th>
            <th class="text-center">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.HoTen</td>
                <td>@item.Email</td>
                <td>@item.SDT</td>
                <td>
                    @if (item.LoaiNguoiDung == "Admin")
                    {
                        <span class="badge bg-danger">Admin</span>
                    }
                    else
                    {
                        <span class="badge bg-primary">User</span>
                    }
                </td>
                <td>
                    @if (item.TrangThai == "Hoạt động")
                    {
                        <span class="badge bg-success">Hoạt động</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Khóa</span>
                    }
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.HinhAnh))
                    {
                        var imagePath = item.LoaiNguoiDung == "Admin"
                        ? $"~/images/admins/{item.HinhAnh}"
                        : $"~/images/nguoidung/{item.HinhAnh}";
                        <img src="@Url.Content(imagePath)"
                             width="80" height="80"
                             class="rounded-circle"
                             style="object-fit: cover;" />
                    }
                </td>

                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@item.MaND" class="btn btn-info btn-sm me-1">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@item.MaND" class="btn btn-warning btn-sm me-1">Sửa</a>

                    <form asp-action="ToggleStatus" asp-route-id="@item.MaND" method="post" class="d-inline">
                        @if (item.TrangThai == "Hoạt động")
                        {
                            <button type="submit" class="btn btn-secondary btn-sm">Khóa</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-success btn-sm">Mở khóa</button>
                        }
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
