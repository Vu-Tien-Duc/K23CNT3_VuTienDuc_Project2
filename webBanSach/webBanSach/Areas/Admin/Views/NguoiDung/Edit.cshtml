@model webBanSach.ViewModels.NguoiDungViewModel
@{
    ViewData["Title"] = "Sửa Người Dùng";
}

<h2 class="mb-4">Sửa thông tin Người dùng</h2>

<form asp-action="Edit" enctype="multipart/form-data" method="post" class="row g-3">
    <input type="hidden" asp-for="MaND" />

    <div class="col-md-6">
        <label asp-for="HoTen" class="form-label"></label>
        <input asp-for="HoTen" class="form-control" />
        <span asp-validation-for="HoTen" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Email" class="form-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="MatKhau" class="form-label">Mật khẩu (bỏ trống nếu không đổi)</label>
        <input asp-for="MatKhau" class="form-control" type="password" />
    </div>
    <div class="col-md-6">
        <label asp-for="SDT" class="form-label"></label>
        <input asp-for="SDT" class="form-control" />
    </div>
    <div class="col-12">
        <label asp-for="DiaChi" class="form-label"></label>
        <input asp-for="DiaChi" class="form-control" />
    </div>
    <div class="col-md-6">
        <label asp-for="LoaiNguoiDung" class="form-label"></label>
        <select asp-for="LoaiNguoiDung" class="form-select">
            <option value="Admin" selected="@(Model.LoaiNguoiDung == "Admin")">Admin</option>
            <option value="User" selected="@(Model.LoaiNguoiDung == "User")">User</option>
        </select>
    </div>
    <div class="col-md-6">
        <label asp-for="TrangThai" class="form-label"></label>
        <select asp-for="TrangThai" class="form-select">
            <option value="Hoạt động" selected="@(Model.TrangThai == "Hoạt động")">Hoạt động</option>
            <option value="Khóa" selected="@(Model.TrangThai == "Khóa")">Khóa</option>
        </select>
    </div>
    <div class="col-12">
        <label asp-for="HinhAnhFile" class="form-label">Ảnh đại diện</label>
        <input asp-for="HinhAnhFile" type="file" class="form-control" />
        @if (!string.IsNullOrEmpty(Model.HinhAnh))
        {
            <div class="mt-2">
                <img src="~/images/nguoidung/@Model.HinhAnh" width="100" class="img-thumbnail" />
            </div>
        }
    </div>
    <div class="col-12">
        <button type="submit" class="btn btn-success">Cập nhật</button>
        <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
