@model IEnumerable<webBanSach.Models.DonHang>
@using webBanSach.Models
@{
    ViewData["Title"] = "Quản lý Đơn hàng";
    string[] statuses = OrderStatus.All;
    string currentSearch = ViewBag.CurrentSearch as string ?? "";
    string currentStatus = ViewBag.CurrentStatus as string ?? "";
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h3><i class="fa-solid fa-cart-shopping"></i> @ViewData["Title"]</h3>

    <form method="get" class="d-flex gap-2">
        <input type="text" name="searchString" class="form-control" placeholder="Tìm đơn hàng hoặc khách hàng..." value="@currentSearch" />
        <select name="status" class="form-select">
            <option value="">-- Tất cả trạng thái --</option>
            @foreach (var s in statuses)
            {
                if (s == currentStatus)
                {
                    <option selected value="@s">@s</option>
                }
                else
                {
                    <option value="@s">@s</option>
                }
            }
        </select>

        <button type="submit" class="btn btn-primary"><i class="fa fa-search"></i> Tìm</button>
    </form>
</div>

<table class="table table-striped align-middle">
    <thead class="table-dark">
        <tr>
            <th>Mã ĐH</th>
            <th>Khách hàng</th>
            <th>Ngày đặt</th>
            <th>Trạng thái</th>
            <th class="text-end">Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var d in Model)
        {
            <tr>
                <td>@d.MaDH</td>
                <td>@d.MaNDNavigation?.HoTen</td>
                <td>@d.NgayDat?.ToString("dd/MM/yyyy")</td>
                <td>
                    <span class="badge bg-@(d.TrangThai == OrderStatus.HoanTat ? "success" :
                                           d.TrangThai == OrderStatus.DangGiao ? "info" :
                                           d.TrangThai == OrderStatus.Huy ? "danger" : "secondary")">
                        @d.TrangThai
                    </span>
                </td>
                <td class="text-end">
                    <a asp-action="Details" asp-route-id="@d.MaDH" class="btn btn-sm btn-info">
                        <i class="fa fa-eye"></i> Chi tiết
                    </a>

                    @if (d.TrangThai != OrderStatus.HoanTat && d.TrangThai != OrderStatus.Huy)
                    {
                        <form asp-action="Cancel" asp-route-id="@d.MaDH" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Xác nhận hủy đơn hàng này?');">
                                <i class="fa fa-times"></i> Hủy
                            </button>
                        </form>
                    }

                    @if (d.TrangThai == OrderStatus.Huy)
                    {
                        <button class="btn btn-danger btn-sm"
                                data-bs-toggle="modal"
                                data-bs-target="#confirmDeleteModal"
                                data-id="@d.MaDH">
                            🗑️
                        </button>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Phân trang -->
@if (totalPages > 1)
{
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="?searchString=@currentSearch&status=@currentStatus&page=@(currentPage-1)">« Trước</a>
            </li>
            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" href="?searchString=@currentSearch&status=@currentStatus&page=@i">@i</a>
                </li>
            }
            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <a class="page-link" href="?searchString=@currentSearch&status=@currentStatus&page=@(currentPage+1)">Sau »</a>
            </li>
        </ul>
    </nav>
}

<!-- Modal xác nhận xóa -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Xác nhận xóa</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <form id="deleteForm" method="post">
                @Html.AntiForgeryToken()
                <div class="modal-body">
                    Bạn có chắc muốn xóa đơn hàng <strong id="deleteOrderId"></strong> không?
                    <input type="hidden" name="id" id="deleteId" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var deleteModal = document.getElementById('confirmDeleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var id = button.getAttribute('data-id');

            document.getElementById('deleteOrderId').textContent = id;
            document.getElementById('deleteId').value = id;

            document.getElementById('deleteForm').action = '/Admin/DonHang/Delete/' + id;
        });
    </script>
}
