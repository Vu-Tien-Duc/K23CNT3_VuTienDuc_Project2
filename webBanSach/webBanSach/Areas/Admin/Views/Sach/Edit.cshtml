@model webBanSach.ViewModels.SachViewModel

@{
    ViewData["Title"] = "✏️ Chỉnh sửa sách";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="row">
    <!-- Cột trái: form -->
    <div class="col-md-8">
        <form asp-action="Edit" enctype="multipart/form-data" class="needs-validation" novalidate>
            <input type="hidden" asp-for="MaSach" />

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-warning-subtle fw-bold text-dark">
                    📝 Thông tin sách
                </div>
                <div class="card-body">
                    <!-- Tên + NXB -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="TenSach" class="form-label">Tên sách</label>
                            <input asp-for="TenSach" class="form-control" placeholder="Nhập tên sách..." required />
                            <span asp-validation-for="TenSach" class="text-danger small"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Nhà xuất bản</label>
                            <select asp-for="MaNXB" class="form-select" asp-items="Model.NhaXuatBans">
                                <option value="">-- Chọn NXB --</option>
                            </select>
                            <span asp-validation-for="MaNXB" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Giá + SL -->
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label asp-for="GiaBan" class="form-label">Giá bán (VNĐ)</label>
                            <input asp-for="GiaBan" class="form-control" type="number" min="0" />
                        </div>
                        <div class="col-md-6">
                            <label asp-for="SoLuong" class="form-label">Số lượng</label>
                            <input asp-for="SoLuong" class="form-control" type="number" min="0" />
                        </div>
                    </div>

                    <!-- Năm XB -->
                    <div class="mb-3">
                        <label asp-for="NamXB" class="form-label">Năm xuất bản</label>
                        <input asp-for="NamXB" class="form-control" type="number" min="1900" max="@DateTime.Now.Year" />
                    </div>

                    <!-- Upload ảnh -->
                    <div class="mb-3">
                        <label class="form-label">Cập nhật ảnh bìa (nếu muốn)</label>
                        <input asp-for="HinhAnhFile" type="file" class="form-control" accept="image/*" />
                        <small class="text-muted">Chấp nhận file .jpg, .png</small>
                    </div>

                    <!-- Mô tả -->
                    <div class="mb-3">
                        <label asp-for="MoTa" class="form-label">Mô tả</label>
                        <textarea asp-for="MoTa" class="form-control" rows="4" placeholder="Nhập mô tả chi tiết..."></textarea>
                    </div>

                    <!-- Tác giả -->
                    <div class="mb-3">
                        <label class="form-label">Tác giả</label>
                        <select asp-for="SelectedTacGia" asp-items="Model.TacGias" class="form-select" multiple></select>
                        <small class="text-muted">Giữ Ctrl để chọn nhiều tác giả.</small>
                    </div>

                    <!-- Thể loại -->
                    <div class="mb-3">
                        <label class="form-label">Thể loại</label>
                        <select asp-for="SelectedTheLoai" asp-items="Model.TheLoais" class="form-select" multiple></select>
                        <small class="text-muted">Giữ Ctrl để chọn nhiều thể loại.</small>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    ⬅️ Quay lại
                </a>
                <button type="submit" class="btn btn-warning fw-bold text-white">
                    💾 Lưu thay đổi
                </button>
            </div>
        </form>
    </div>

    <!-- Cột phải: thông tin hiện tại -->
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-header bg-light fw-bold">📘 Ảnh hiện tại</div>
            <div class="card-body text-center">
                <img src="~/images/sach/@(Model.HinhAnh ?? "no-image.png")"
                     alt="@Model.TenSach"
                     class="img-fluid rounded shadow-sm mb-2"
                     style="max-height:220px; object-fit:cover;" />
                <p class="text-muted small">@Model.HinhAnh</p>
                <hr />
                <p><strong>ID:</strong> #@Model.MaSach</p>
                <p><strong>Giá:</strong> @string.Format("{0:N0} VNĐ", Model.GiaBan)</p>
                <p><strong>Tồn kho:</strong> @Model.SoLuong</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
