@model webBanSach.Models.KhuyenMai
@{
    ViewData["Title"] = "Thêm khuyến mãi";

    var loaiList = new List<SelectListItem>
    {
        new SelectListItem { Text = "Phần trăm (%)", Value = "PhanTram" },
        new SelectListItem { Text = "Tiền mặt (₫)", Value = "TienMat" }
    };
}

<div class="container mt-4">
    <div class="card shadow border-0">
        <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0"><i class="fa-solid fa-ticket me-2"></i>@ViewData["Title"]</h4>
            <a asp-action="Index" class="btn btn-light btn-sm">
                <i class="fa-solid fa-arrow-left"></i> Quay lại
            </a>
        </div>

        <form asp-area="Admin" asp-controller="KhuyenMai" asp-action="Create" method="post" class="card-body p-4">
            @Html.AntiForgeryToken()

            <div class="row g-3">

                <!-- Mã code -->
                <div class="col-md-6">
                    <label asp-for="MaCode" class="form-label fw-semibold">
                        <i class="fa-solid fa-barcode me-1 text-primary"></i> Mã code
                    </label>
                    <input asp-for="MaCode" class="form-control" placeholder="Nhập mã giảm giá..." />
                    <span asp-validation-for="MaCode" class="text-danger"></span>
                </div>

                <!-- Mô tả -->
                <div class="col-md-6">
                    <label asp-for="MoTa" class="form-label fw-semibold">
                        <i class="fa-solid fa-align-left me-1 text-primary"></i> Mô tả
                    </label>
                    <textarea asp-for="MoTa" class="form-control" rows="1" placeholder="Mô tả nội dung khuyến mãi..."></textarea>
                    <span asp-validation-for="MoTa" class="text-danger"></span>
                </div>

                <!-- Loại giảm -->
                <div class="col-md-6">
                    <label asp-for="LoaiGiam" class="form-label fw-semibold">
                        <i class="fa-solid fa-tags me-1 text-primary"></i> Loại giảm
                    </label>
                    <select asp-for="LoaiGiam" class="form-select" asp-items="loaiList" id="LoaiGiamSelect">
                        <option value="">-- Chọn loại giảm --</option>
                    </select>
                    <span asp-validation-for="LoaiGiam" class="text-danger"></span>
                </div>

                <!-- Giảm phần trăm -->
                <div class="col-12" id="PhanTramDiv" style="display:none;">
                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="PhanTramGiam" class="form-label fw-semibold">
                                <i class="fa-solid fa-percent me-1 text-primary"></i> % Giảm
                            </label>
                            <input asp-for="PhanTramGiam" class="form-control" type="number" step="0.01" min="0" placeholder="Nhập phần trăm giảm..." />
                            <span asp-validation-for="PhanTramGiam" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="GiamToiDa" class="form-label fw-semibold">
                                <i class="fa-solid fa-bullseye me-1 text-primary"></i> Giảm tối đa (₫)
                            </label>
                            <input asp-for="GiamToiDa" class="form-control" type="number" step="0.01" min="0" placeholder="Giới hạn giảm tối đa..." />
                            <span asp-validation-for="GiamToiDa" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Giảm tiền mặt -->
                <div class="col-12" id="TienMatDiv" style="display:none;">
                    <div class="row">
                        <div class="col-md-6">
                            <label asp-for="SoTienGiam" class="form-label fw-semibold">
                                <i class="fa-solid fa-money-bill-wave me-1 text-primary"></i> Số tiền giảm (₫)
                            </label>
                            <input asp-for="SoTienGiam" class="form-control" type="number" step="0.01" min="0" placeholder="Nhập số tiền giảm..." />
                            <span asp-validation-for="SoTienGiam" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Ngày bắt đầu & kết thúc -->
                <div class="col-md-6">
                    <label asp-for="NgayBatDau" class="form-label fw-semibold">
                        <i class="fa-solid fa-calendar-day me-1 text-primary"></i> Ngày bắt đầu
                    </label>
                    <input asp-for="NgayBatDau" class="form-control" type="date" />
                    <span asp-validation-for="NgayBatDau" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="NgayKetThuc" class="form-label fw-semibold">
                        <i class="fa-solid fa-calendar-check me-1 text-primary"></i> Ngày kết thúc
                    </label>
                    <input asp-for="NgayKetThuc" class="form-control" type="date" />
                    <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
                </div>

                <!-- Trạng thái -->
                <div class="col-12 mt-2">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" asp-for="TrangThai" id="TrangThaiCheck" />
                        <label class="form-check-label fw-semibold" for="TrangThaiCheck">
                            <i class="fa-solid fa-toggle-on text-success me-1"></i> Đang áp dụng
                        </label>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="col-12 text-end mt-3">
                    <button type="submit" class="btn btn-success me-2">
                        <i class="fa-solid fa-floppy-disk"></i> Lưu
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fa-solid fa-rotate-left"></i> Quay lại
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Ẩn / hiện các ô nhập theo loại giảm
        function toggleInputs() {
            const loai = document.getElementById("LoaiGiamSelect").value;
            document.getElementById("PhanTramDiv").style.display = (loai === "PhanTram") ? "block" : "none";
            document.getElementById("TienMatDiv").style.display = (loai === "TienMat") ? "block" : "none";
        }

        document.addEventListener("DOMContentLoaded", function () {
            toggleInputs();
            document.getElementById("LoaiGiamSelect").addEventListener("change", toggleInputs);
        });
    </script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css" />
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
