@model IEnumerable<webBanSach.Models.KhuyenMai>
@{
    ViewData["Title"] = "Quản lý Khuyến mãi";
}

<h2 class="mb-3">@ViewData["Title"]</h2>

<form method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="search" class="form-control" placeholder="Tìm theo mã code, mô tả..." value="@Context.Request.Query["search"]" />
        <button type="submit" class="btn btn-primary">🔍 Tìm</button>
        <a asp-action="Create" class="btn btn-success ms-2">➕ Thêm Khuyến mãi</a>
    </div>
</form>

<table class="table table-hover align-middle shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>Mã Code</th>
            <th>Mô tả</th>
            <th>% Giảm</th>
            <th>Giảm tối đa</th>
            <th>Thời gian</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var km in Model)
        {
            <tr>
                <td><strong>@km.MaCode</strong></td>
                <td>@km.MoTa</td>
                <td>@km.PhanTramGiam %</td>
                <td>@(km.GiamToiDa?.ToString("N0")) đ</td>
                <td>@km.NgayBatDau.ToString("dd/MM/yyyy") - @km.NgayKetThuc.ToString("dd/MM/yyyy")</td>
                <td>
                    @if (km.TrangThai == true)
                    {
                        <span class="badge bg-success">Đang áp dụng</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Ngừng</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@km.MaKM" class="btn btn-info btn-sm">👁️</a>
                    <a asp-action="Edit" asp-route-id="@km.MaKM" class="btn btn-warning btn-sm">✏️</a>

                    <form asp-action="Toggle" method="post" class="d-inline">
                        <input type="hidden" name="id" value="@km.MaKM" />
                        <button type="submit" class="btn btn-sm btn-secondary">
                            @(km.TrangThai == true ? "Ẩn" : "Hiện")
                        </button>
                    </form>


                    <button class="btn btn-danger btn-sm"
                            data-bs-toggle="modal"
                            data-bs-target="#confirmDeleteModal"
                            data-id="@km.MaKM"
                            data-code="@km.MaCode">
                        🗑️
                    </button>


                </td>
            </tr>
        }
    </tbody>
</table>
<!-- Modal xác nhận xóa -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Xác nhận xóa</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <form id="deleteForm" method="post">
                <div class="modal-body">
                    Bạn có chắc chắn muốn xóa khuyến mãi <strong id="deleteItemName"></strong>?
                    <input type="hidden" name="id" id="deleteItemId" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var deleteModal = document.getElementById('confirmDeleteModal');
        deleteModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var id = button.getAttribute('data-id');
            var code = button.getAttribute('data-code'); // ví dụ: mã khuyến mãi

            document.getElementById('deleteItemName').textContent = code;
            document.getElementById('deleteItemId').value = id;

            // Gọi đúng action DeleteConfirmed
            document.getElementById('deleteForm').action = '/Admin/KhuyenMai/DeleteConfirmed/' + id;
        });
    </script>
}
