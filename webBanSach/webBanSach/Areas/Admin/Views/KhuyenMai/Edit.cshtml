@model webBanSach.Models.KhuyenMai
@{
    ViewData["Title"] = "Chỉnh sửa Khuyến mãi";

    var loaiList = new List<SelectListItem>
    {
        new SelectListItem { Text = "Phần trăm", Value = "PhanTram" },
        new SelectListItem { Text = "Tiền mặt", Value = "TienMat" }
    };
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post" class="card p-4 shadow-sm">
    <input type="hidden" asp-for="MaKM" />

    <div class="mb-3">
        <label asp-for="MaCode" class="form-label">Mã Code</label>
        <input asp-for="MaCode" class="form-control" />
        <span asp-validation-for="MaCode" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="MoTa" class="form-label">Mô tả</label>
        <textarea asp-for="MoTa" class="form-control"></textarea>
        <span asp-validation-for="MoTa" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LoaiGiam" class="form-label">Loại giảm</label>
        <select asp-for="LoaiGiam" class="form-select" asp-items="loaiList" id="LoaiGiamSelect">
            <option value="">-- Chọn loại giảm --</option>
        </select>
        <span asp-validation-for="LoaiGiam" class="text-danger"></span>
    </div>

    <div class="row mb-3" id="PhanTramDiv">
        <div class="col-md-6">
            <label asp-for="PhanTramGiam" class="form-label">% Giảm</label>
            <input asp-for="PhanTramGiam" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="PhanTramGiam" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="GiamToiDa" class="form-label">Giảm tối đa</label>
            <input asp-for="GiamToiDa" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="GiamToiDa" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3" id="SoTienDiv">
        <div class="col-md-6">
            <label asp-for="SoTienGiam" class="form-label">Số tiền giảm</label>
            <input asp-for="SoTienGiam" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="SoTienGiam" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="GiamToiDa" class="form-label">Giảm tối đa</label>
            <input asp-for="GiamToiDa" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="GiamToiDa" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3">
        <div class="col-md-6">
            <label asp-for="NgayBatDau" class="form-label">Ngày bắt đầu</label>
            <input asp-for="NgayBatDau" class="form-control" type="date" />
            <span asp-validation-for="NgayBatDau" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="NgayKetThuc" class="form-label">Ngày kết thúc</label>
            <input asp-for="NgayKetThuc" class="form-control" type="date" />
            <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
        </div>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" asp-for="TrangThai" />
        <label class="form-check-label">Đang áp dụng</label>
    </div>

    <button type="submit" class="btn btn-primary">💾 Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">⬅ Quay lại</a>
</form>

@section Scripts {
    <script>
        function toggleInputs() {
            var loai = document.getElementById("LoaiGiamSelect").value;
            document.getElementById("PhanTramDiv").style.display = (loai === "PhanTram") ? "flex" : "none";
            document.getElementById("SoTienDiv").style.display = (loai === "TienMat") ? "flex" : "none";
        }

        document.getElementById("LoaiGiamSelect").addEventListener("change", toggleInputs);
        window.onload = toggleInputs; // tự động hiển thị đúng theo giá trị Model
    </script>

    @await Html.PartialAsync("_ValidationScriptsPartial")
}
