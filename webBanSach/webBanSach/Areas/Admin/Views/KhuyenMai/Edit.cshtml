@model webBanSach.Models.KhuyenMai
@{
    ViewData["Title"] = "Chỉnh sửa Khuyến mãi";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post" class="card p-4 shadow-sm">
    <input type="hidden" asp-for="MaKM" />

    <div class="mb-3">
        <label asp-for="MaCode" class="form-label">Mã Code</label>
        <input asp-for="MaCode" class="form-control" />
        <span asp-validation-for="MaCode" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="MoTa" class="form-label">Mô tả</label>
        <textarea asp-for="MoTa" class="form-control"></textarea>
        <span asp-validation-for="MoTa" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="PhanTramGiam" class="form-label">% Giảm</label>
            <input asp-for="PhanTramGiam" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="PhanTramGiam" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="GiamToiDa" class="form-label">Giảm tối đa</label>
            <input asp-for="GiamToiDa" class="form-control" type="number" step="0.01" />
            <span asp-validation-for="GiamToiDa" class="text-danger"></span>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6 mb-3">
            <label asp-for="NgayBatDau" class="form-label">Ngày bắt đầu</label>
            <input asp-for="NgayBatDau" class="form-control" type="date" />
            <span asp-validation-for="NgayBatDau" class="text-danger"></span>
        </div>
        <div class="col-md-6 mb-3">
            <label asp-for="NgayKetThuc" class="form-label">Ngày kết thúc</label>
            <input asp-for="NgayKetThuc" class="form-control" type="date" />
            <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
        </div>
    </div>

    <div class="form-check mb-3">
        <input class="form-check-input"
               type="checkbox"
               name="TrangThai"
               value="true"
        @(Model.TrangThai == true ? "checked" : "") />
        <input type="hidden" name="TrangThai" value="false" />
        <label class="form-check-label">Đang áp dụng</label>
    </div>


    <button type="submit" class="btn btn-primary">💾 Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">⬅ Quay lại</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
