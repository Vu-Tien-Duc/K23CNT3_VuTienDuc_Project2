@model webBanSach.Models.LienHe

@{
    ViewData["Title"] = "Chi tiết Liên hệ";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <!-- Header -->
        <div class="card-header bg-gradient text-white d-flex align-items-center justify-content-between" style="background: linear-gradient(90deg, #17a2b8, #0d6efd);">
            <h4 class="mb-0">
                <i class="fa-solid fa-envelope-open-text me-2"></i>Chi tiết Liên hệ
            </h4>
            <span class="badge fs-6 @(Model.TrangThai == "DaXuLy" ? "bg-success" : "bg-warning text-dark")">
                <i class="@(Model.TrangThai == "DaXuLy" ? "fa-solid fa-circle-check" : "fa-solid fa-hourglass-half") me-1"></i>
                @(Model.TrangThai == "DaXuLy" ? "Đã xử lý" : "Chưa xử lý")
            </span>
        </div>

        <!-- Body -->
        <div class="card-body p-4">
            <div class="row mb-3">
                <div class="col-md-6 mb-3">
                    <h6 class="text-secondary mb-1"><i class="fa-solid fa-user me-2 text-primary"></i>Họ tên</h6>
                    <p class="fw-semibold fs-5">@Model.HoTen</p>
                </div>

                <div class="col-md-6 mb-3">
                    <h6 class="text-secondary mb-1"><i class="fa-solid fa-at me-2 text-primary"></i>Email</h6>
                    <p class="fw-semibold fs-5">@Model.Email</p>
                </div>

                <div class="col-md-6 mb-3">
                    <h6 class="text-secondary mb-1"><i class="fa-solid fa-heading me-2 text-primary"></i>Tiêu đề</h6>
                    <p class="fw-semibold fs-5">@Model.TieuDe</p>
                </div>

                <div class="col-md-6 mb-3">
                    <h6 class="text-secondary mb-1"><i class="fa-solid fa-calendar-days me-2 text-primary"></i>Ngày gửi</h6>
                    <p class="fw-semibold fs-5">@Model.NgayGui?.ToString("dd/MM/yyyy HH:mm")</p>
                </div>

                <div class="col-12 mb-3">
                    <h6 class="text-secondary mb-1"><i class="fa-solid fa-message me-2 text-primary"></i>Nội dung</h6>
                    <div class="p-3 border rounded bg-light shadow-sm" style="white-space: pre-line;">
                        @Model.NoiDung
                    </div>
                </div>
            </div>
        </div>

        <!-- Footer -->
        <div class="card-footer bg-light d-flex justify-content-between align-items-center py-3">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fa-solid fa-arrow-left me-1"></i> Quay lại
            </a>
            <div class="d-flex gap-2">
                <form asp-action="Toggle" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@Model.MaLH" />
                    <button type="submit" class="btn btn-warning">
                        <i class="fa-solid fa-rotate me-1"></i> Đổi trạng thái
                    </button>
                </form>

                <form asp-action="DeleteConfirmed" method="post" class="d-inline">
                    <input type="hidden" name="id" value="@Model.MaLH" />
                    <button type="submit" class="btn btn-danger"
                            onclick="return confirm('Bạn chắc chắn muốn xóa liên hệ này?')">
                        <i class="fa-solid fa-trash me-1"></i> Xóa
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
