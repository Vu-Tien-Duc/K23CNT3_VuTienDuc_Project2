@model webBanSach.ViewModels.SachViewModel

@{
    ViewData["Title"] = "Chi tiết sách";
    var userName = Context.Session.GetString("UserName");
    var avgRating = Math.Round(ViewBag.AvgRating, 1);
}

<div class="container mt-5">
    <div class="row g-4">
        <div class="col-md-4 text-center">
            <img src="~/images/sach/@(Model.HinhAnh ?? "no-image.png")"
                 class="img-fluid rounded border shadow-sm"
                 alt="@Model.TenSach"
                 style="max-height:300px; object-fit:cover;" />
        </div>
        <div class="col-md-8">
            <h2 class="text-primary fw-bold">@Model.TenSach</h2>

            <!-- Rating -->
            <p class="mb-2">
                <strong>Đánh giá trung bình:</strong>
                <span class="text-warning">
                    @for (int i = 1; i <= 5; i++)
                    {
                        if (i <= Math.Floor(avgRating))
                        {
                            <i class="bi bi-star-fill"></i>
                            ;
                        }
                        else if (i - avgRating < 1)
                        {
                            <i class="bi bi-star-half"></i>
                            ;
                        }
                        else
                        {
                            <i class="bi bi-star"></i>
                            ;
                        }
                    }
                    (@avgRating/5)
                </span>
            </p>

            <p class="text-muted mb-1"><i class="bi bi-eye"></i> @Model.LuotXem lượt xem</p>

            <h4 class="text-danger fw-bold mb-3">
                @if ((Model.SoLuong ?? 0) == 0)
                {
                    <span>Hết hàng</span>
                }
                else
                {
                    <span>Giá: @Model.GiaBan.ToString("N0") VNĐ</span>
                }
            </h4>

            <p><strong>NXB:</strong> @(Model.NXB ?? "Chưa rõ")</p>
            <p><strong>Năm xuất bản:</strong> @(Model.NamXB ?? 0)</p>
            <p><strong>Số lượng còn:</strong> @(Model.SoLuong ?? 0)</p>
            <p><strong>Mô tả:</strong> @(!string.IsNullOrEmpty(Model.MoTa) ? Model.MoTa : "Chưa có mô tả")</p>

            <!-- Form thêm giỏ + mua ngay -->
            <div class="mt-3 d-flex gap-2">
                @if ((Model.SoLuong ?? 0) > 0)
                {
                    <!-- Thêm vào giỏ -->
                    <form asp-controller="Cart" asp-action="Add" method="post" class="d-inline">
                        <input type="hidden" name="maSach" value="@Model.MaSach" />
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-cart-plus"></i> Thêm vào giỏ
                        </button>
                    </form>

                    <!-- Mua ngay -->
                    <form asp-controller="Cart" asp-action="CheckoutNow" method="post" class="d-inline">
                        <input type="hidden" name="maSach" value="@Model.MaSach" />
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-bag-check"></i> Mua ngay
                        </button>
                    </form>
                }
                else
                {
                    <button class="btn btn-secondary" disabled>Hết hàng</button>
                }

                <a asp-action="Index" asp-controller="Sach" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>

    <hr class="my-4" />

    <!-- Phần đánh giá sách giữ nguyên -->
    <h4 class="fw-bold">Đánh giá từ khách hàng</h4>
    @if (Context.Session.GetInt32("MaND") != null)
    {
        <div class="card mb-4 p-3 shadow-sm">
            <form asp-controller="DanhGia" asp-action="Add" method="post">
                <input type="hidden" name="MaSach" value="@Model.MaSach" />
                <input type="hidden" name="Diem" id="DiemHidden" required />

                <div class="mb-3">
                    <label class="form-label">Đánh giá</label>
                    <div class="star-rating d-flex gap-1">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <span class="star fs-2 text-secondary" data-value="@i"><i class="bi bi-star-fill"></i></span>
                        }
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Nhận xét</label>
                    <textarea class="form-control" name="BinhLuan" rows="3" placeholder="Chia sẻ trải nghiệm của bạn..." required></textarea>
                </div>

                <button type="submit" class="btn btn-success">Gửi đánh giá</button>
            </form>
        </div>
    }
    else
    {
        <p class="text-muted">Bạn cần <a href="@Url.Action("Login","Account")">đăng nhập</a> để đánh giá sách.</p>
    }

    <!-- Danh sách đánh giá -->
    @if (Model.DanhGias != null && Model.DanhGias.Any())
    {
        <div class="list-group mt-4">
            @foreach (var dg in Model.DanhGias)
            {
                <div class="list-group-item mb-2 shadow-sm p-3">
                    <div class="d-flex justify-content-between">
                        <strong>@(dg.MaNDNavigation?.HoTen ?? "Người dùng ẩn danh")</strong>
                        <small class="text-muted">@dg.NgayDG?.ToString("dd/MM/yyyy HH:mm")</small>
                    </div>
                    <div class="text-warning mb-1">
                        @for (int i = 0; i < (int)(dg.Diem ?? 0); i++)
                        {
                            <i class="bi bi-star-fill"></i>
                            ;
                        }
                        @for (int i = (int)(dg.Diem ?? 0); i < 5; i++)
                        {
                            <i class="bi bi-star"></i>
                            ;
                        }
                        (@(dg.Diem ?? 0)/5)
                    </div>
                    <p class="mb-0">@dg.BinhLuan</p>
                </div>
            }
        </div>
    }
    else
    {
        <p class="text-muted">Chưa có đánh giá nào cho sách này.</p>
    }
</div>

<style>
    .star {
        cursor: pointer;
        transition: color 0.2s;
    }

        .star.selected, .star.hover {
            color: gold !important;
        }
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const stars = document.querySelectorAll(".star-rating .star");
        const hiddenInput = document.getElementById("DiemHidden");
        let selectedValue = 0;

        stars.forEach(star => {
            star.addEventListener("mouseenter", function () {
                const value = parseInt(this.dataset.value);
                stars.forEach(s => s.classList.remove("hover"));
                stars.forEach(s => { if (parseInt(s.dataset.value) <= value) s.classList.add("hover"); });
            });

            star.addEventListener("mouseleave", function () {
                stars.forEach(s => s.classList.remove("hover"));
                stars.forEach(s => { if (parseInt(s.dataset.value) <= selectedValue) s.classList.add("selected"); });
            });

            star.addEventListener("click", function () {
                selectedValue = parseInt(this.dataset.value);
                hiddenInput.value = selectedValue;
                stars.forEach(s => s.classList.remove("selected"));
                stars.forEach(s => { if (parseInt(s.dataset.value) <= selectedValue) s.classList.add("selected"); });
            });
        });
    });
</script>
