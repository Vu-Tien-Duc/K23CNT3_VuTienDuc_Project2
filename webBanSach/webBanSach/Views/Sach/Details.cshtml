@model webBanSach.Models.Sach

@{
    ViewData["Title"] = "Chi tiết sách";
}

<div class="container mt-5">
    <div class="row g-4">

        <!-- Ảnh sách -->
        <div class="col-md-4 text-center">
            <img src="~/images/sach/@(Model.HinhAnh ?? "no-image.png")"
                 class="img-fluid rounded border shadow-sm"
                 alt="@Model.TenSach"
                 style="max-height:300px; object-fit:cover;" />
        </div>

        <!-- Thông tin chi tiết -->
        <div class="col-md-8">
            <h2 class="text-primary fw-bold">@Model.TenSach</h2>
            <p class="text-muted mb-1">
                <i class="bi bi-eye"></i> @Model.LuotXem lượt xem
            </p>

            <h4 class="text-danger fw-bold mb-3">
                @if (Model.SoLuong == 0)
                {
                    <span>Hết hàng</span>
                }
                else
                {
                    <span>Giá: @Model.GiaBan.ToString("N0") VNĐ</span>
                }
            </h4>

            <p><strong>NXB:</strong> @(Model.MaNXBNavigation?.TenNXB ?? "Chưa rõ")</p>
            <p><strong>Năm xuất bản:</strong> @(Model.NamXB ?? 0)</p>
            <p><strong>Số lượng còn:</strong> @(Model.SoLuong ?? 0)</p>
            <p><strong>Mô tả:</strong> @(!string.IsNullOrEmpty(Model.MoTa) ? Model.MoTa : "Chưa có mô tả")</p>

            <!-- Thể loại -->
            <p>
                <strong>Thể loại:</strong>
                @if (Model.Sach_TheLoais != null && Model.Sach_TheLoais.Any())
                {
                    foreach (var tl in Model.Sach_TheLoais)
                    {
                        <span class="badge bg-primary me-1">@tl.MaLoaiNavigation.TenLoai</span>
                    }
                }
                else
                {
                    <span class="text-muted">Chưa có</span>
                }
            </p>

            <!-- Tác giả -->
            <p>
                <strong>Tác giả:</strong>
                @if (Model.Sach_TacGias != null && Model.Sach_TacGias.Any())
                {
                    foreach (var tg in Model.Sach_TacGias)
                    {
                        <span class="badge bg-info text-dark me-1">@tg.MaTGNavigation.TenTG</span>
                    }
                }
                else
                {
                    <span class="text-muted">Chưa rõ</span>
                }
            </p>

            <!-- Nút thao tác -->
            <div class="mt-4 d-flex flex-wrap gap-2">
                @if (Model.SoLuong > 0)
                {
                    <form asp-controller="GioHangs" asp-action="ThemVaoGio" method="post" class="d-inline">
                        <input type="hidden" name="maSach" value="@Model.MaSach" />
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="bi bi-cart-plus"></i> Thêm vào giỏ hàng
                        </button>
                    </form>

                    <form asp-controller="GioHangs" asp-action="MuaNgay" method="post" class="d-inline">
                        <input type="hidden" name="maSach" value="@Model.MaSach" />
                        <button type="submit" class="btn btn-danger btn-lg">
                            <i class="bi bi-bag-check"></i> Mua ngay
                        </button>
                    </form>
                }
                else
                {
                    <button class="btn btn-secondary btn-lg" disabled>
                        <i class="bi bi-x-circle"></i> Hết hàng
                    </button>
                }

                <a href="@ViewBag.ReturnUrl" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-arrow-left"></i> Quay lại
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    .badge {
        font-size: 0.9rem;
        padding: 0.5em 0.75em;
    }

    .btn-lg {
        min-width: 160px;
    }
</style>
