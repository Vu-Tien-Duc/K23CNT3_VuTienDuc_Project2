@model webBanSach.ViewModels.SachViewModel

@{
    ViewData["Title"] = "Chi tiết sách";
    var userName = Context.Session.GetString("UserName");
    var avgRating = Math.Round(ViewBag.AvgRating, 1);
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 p-4">
        <div class="row g-4 align-items-center">
            <!-- Ảnh sách -->
            <div class="col-md-4 text-center">
                <img src="~/images/sach/@(Model.HinhAnh ?? "no-image.png")"
                     class="img-fluid rounded-3 border shadow-sm"
                     alt="@Model.TenSach"
                     style="max-height: 350px; object-fit: cover; width: 100%; background: #fff;" />
            </div>

            <!-- Thông tin sách -->
            <div class="col-md-8">
                <h2 class="fw-bold text-primary mb-2">@Model.TenSach</h2>

                <p class="mb-2">
                    <strong>Đánh giá trung bình:</strong>
                    <span class="text-warning fs-5">
                        @for (int i = 1; i <= 5; i++)
                        {
                            if (i <= Math.Floor(avgRating))
                            {
                                <i class="bi bi-star-fill"></i>
                            }
                            else if (i - avgRating < 1)
                            {
                                <i class="bi bi-star-half"></i>
                            }
                            else
                            {
                                <i class="bi bi-star"></i>
                            }
                        }
                        <span class="text-dark fw-semibold">(@avgRating/5)</span>
                    </span>
                </p>

                <p class="text-muted mb-1"><i class="bi bi-eye"></i> @Model.LuotXem lượt xem</p>

                <h4 class="text-danger fw-bold mb-3">
                    @if ((Model.SoLuong ?? 0) == 0)
                    {
                        <span>Hết hàng</span>
                    }
                    else
                    {
                        <span>Giá: @Model.GiaBan.ToString("N0") VNĐ</span>
                    }
                </h4>

                <div class="text-secondary small mb-3">
                    <p><strong>NXB:</strong> @(Model.NXB ?? "Chưa rõ")</p>
                    <p><strong>Năm xuất bản:</strong> @(Model.NamXB ?? 0)</p>
                    <p><strong>Số lượng còn:</strong> @(Model.SoLuong ?? 0)</p>
                </div>

                <p class="text-dark"><strong>Mô tả:</strong> @(!string.IsNullOrEmpty(Model.MoTa) ? Model.MoTa : "Chưa có mô tả")</p>

                <!-- Nút hành động -->
                <div class="mt-4 d-flex flex-wrap gap-2">
                    @if ((Model.SoLuong ?? 0) > 0)
                    {
                        <form asp-controller="Cart" asp-action="Add" method="post">
                            <input type="hidden" name="maSach" value="@Model.MaSach" />
                            <button type="submit" class="btn btn-success rounded-pill shadow-sm">
                                <i class="bi bi-cart-plus"></i> Thêm vào giỏ
                            </button>
                        </form>

                        <form asp-controller="Cart" asp-action="CheckoutNow" method="post">
                            <input type="hidden" name="maSach" value="@Model.MaSach" />
                            <button type="submit" class="btn btn-primary rounded-pill shadow-sm">
                                <i class="bi bi-bag-check"></i> Mua ngay
                            </button>
                        </form>
                    }
                    else
                    {
                        <button class="btn btn-secondary rounded-pill" disabled>Hết hàng</button>
                    }

                    <a asp-action="Index" asp-controller="Sach" class="btn btn-outline-secondary rounded-pill shadow-sm">
                        <i class="bi bi-arrow-left"></i> Quay lại
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Đánh giá -->
    <div class="mt-5">
        <h4 class="fw-bold mb-3">Đánh giá từ khách hàng</h4>

        @if (Context.Session.GetInt32("MaND") != null)
        {
            <div class="card mb-4 p-3 border-0 shadow-sm rounded-3">
                <form asp-controller="DanhGia" asp-action="Add" method="post">
                    <input type="hidden" name="MaSach" value="@Model.MaSach" />
                    <input type="hidden" name="Diem" id="DiemHidden" required />

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Đánh giá của bạn:</label>
                        <div class="star-rating d-flex gap-1">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <span class="star fs-3 text-secondary" data-value="@i"><i class="bi bi-star-fill"></i></span>
                            }
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-semibold">Nhận xét</label>
                        <textarea class="form-control" name="BinhLuan" rows="3"
                                  placeholder="Chia sẻ trải nghiệm của bạn..." required></textarea>
                    </div>

                    <button type="submit" class="btn btn-success rounded-pill">Gửi đánh giá</button>
                </form>
            </div>
        }
        else
        {
            <p class="text-muted">Bạn cần <a href="@Url.Action("Login","Account")" class="text-decoration-none fw-semibold">đăng nhập</a> để đánh giá sách.</p>
        }

        @if (Model.DanhGias != null && Model.DanhGias.Any())
        {
            <div class="list-group mt-4">
                @foreach (var dg in Model.DanhGias)
                {
                    <div class="list-group-item mb-3 border-0 shadow-sm rounded-3">
                        <div class="d-flex justify-content-between align-items-center mb-1">
                            <strong>@(dg.MaNDNavigation?.HoTen ?? "Người dùng ẩn danh")</strong>
                            <small class="text-muted">@dg.NgayDG?.ToString("dd/MM/yyyy HH:mm")</small>
                        </div>
                        <div class="text-warning mb-2">
                            @for (int i = 0; i < (int)(dg.Diem ?? 0); i++)
                            {
                                <i class="bi bi-star-fill"></i>
                            }
                            @for (int i = (int)(dg.Diem ?? 0); i < 5; i++)
                            {
                                <i class="bi bi-star"></i>
                            }
                            <span class="text-dark fw-semibold">(@(dg.Diem ?? 0)/5)</span>
                        </div>
                        <p class="mb-0 text-dark">@dg.BinhLuan</p>
                    </div>
                }
            </div>
        }
        else
        {
            <p class="text-muted">Chưa có đánh giá nào cho sách này.</p>
        }
    </div>
</div>

<style>
    .star {
        cursor: pointer;
        transition: color 0.25s, transform 0.2s;
    }

    .star.selected, .star.hover {
        color: gold !important;
        transform: scale(1.1);
    }

   
</style>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        const stars = document.querySelectorAll(".star-rating .star");
        const hiddenInput = document.getElementById("DiemHidden");
        let selectedValue = 0;

        stars.forEach(star => {
            star.addEventListener("mouseenter", function () {
                const value = parseInt(this.dataset.value);
                stars.forEach(s => s.classList.toggle("hover", parseInt(s.dataset.value) <= value));
            });

            star.addEventListener("mouseleave", function () {
                stars.forEach(s => s.classList.toggle("selected", parseInt(s.dataset.value) <= selectedValue));
                stars.forEach(s => s.classList.remove("hover"));
            });

            star.addEventListener("click", function () {
                selectedValue = parseInt(this.dataset.value);
                hiddenInput.value = selectedValue;
                stars.forEach(s => s.classList.toggle("selected", parseInt(s.dataset.value) <= selectedValue));
            });
        });
    });
</script>
