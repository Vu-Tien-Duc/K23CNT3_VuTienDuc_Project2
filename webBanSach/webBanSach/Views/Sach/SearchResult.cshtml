@model IEnumerable<webBanSach.ViewModels.SachViewModel>
@{
    ViewData["Title"] = "Kết quả tìm kiếm";
    string filterType = ViewBag.FilterType ?? "";
    string keyword = ViewBag.Keyword ?? "";
}

<div class="container mt-4">
    <h5 class="mb-3">Kết quả tìm kiếm theo @filterType: "<span class="text-primary">@keyword</span>"</h5>

    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12 text-center text-muted">
                <p>Không tìm thấy sách phù hợp 😢</p>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                <div class="col-md-3 mb-4">
                    <div class="card book-card h-100">
                        <div class="book-img-wrapper">
                            <img src="~/images/sach/@(item.HinhAnh ?? "no-image.png")"
                                 class="card-img-top" alt="@item.TenSach" />
                        </div>
                        <div class="card-body text-center">
                            <h6 class="card-title text-truncate fw-bold" title="@item.TenSach">@item.TenSach</h6>
                            <p class="text-muted small mb-1">NXB: @item.NXB</p>
                            @if (item.SoLuong == 0)
                            {
                                <p class="text-danger fw-bold">Hết hàng</p>
                            }
                            else
                            {
                                <p class="book-price">@string.Format("{0:N0} đ", item.GiaBan)</p>
                            }
                        </div>
                        <div class="card-footer d-flex justify-content-center gap-2">
                            <a asp-action="Details" asp-route-id="@item.MaSach"
                               class="btn btn-sm btn-outline-primary rounded-pill px-3">Chi tiết</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    .book-card {
        border: none;
        border-radius: 12px;
        overflow: hidden;
        transition: transform 0.2s, box-shadow 0.2s;
    }

        .book-card:hover {
            transform: translateY(-6px);
            box-shadow: 0 8px 20px rgba(0,0,0,0.12);
        }

    .book-img-wrapper {
        height: 250px;
        display: flex;
        align-items: center;
        justify-content: center;
        background: #fafafa;
    }

        .book-img-wrapper img {
            max-height: 100%;
            transition: transform 0.3s ease;
        }

    .book-card:hover img {
        transform: scale(1.05);
    }

    .book-price {
        color: #e67e22;
        font-size: 16px;
        font-weight: bold;
    }
</style>
