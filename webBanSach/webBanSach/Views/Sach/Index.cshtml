@model IEnumerable<webBanSach.ViewModels.SachViewModel>
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Danh sách Sách";
    var userId = HttpContextAccessor.HttpContext?.Session.GetInt32("MaND");
}

<div class="container mt-4">

    <!-- THANH TÌM KIẾM & LỌC -->
    <div class="filter-bar bg-white p-3 rounded-4 shadow-sm border mb-4">
        <div class="d-flex flex-wrap gap-3 justify-content-center align-items-center">

            <!-- Ô tìm kiếm -->
            <form asp-action="Index" method="get"
                  class="d-flex align-items-center search-pill bg-light px-3 py-2 rounded-pill shadow-sm"
                  style="min-width: 280px;">
                <i class="bi bi-search text-primary me-2 fs-5"></i>
                <input type="text" name="keyword" value="@ViewBag.Keyword"
                       class="form-control border-0 bg-transparent shadow-none"
                       placeholder="Tìm sách, tác giả, thể loại..." />
                <button type="submit" class="btn btn-primary btn-sm ms-2 rounded-pill px-3">
                    <i class="bi bi-search"></i>
                </button>
            </form>

            <!-- Dropdown Thể loại -->
            <div class="dropdown">
                <button class="btn btn-outline-primary rounded-pill px-4 d-flex align-items-center gap-2 dropdown-toggle"
                        type="button" data-bs-toggle="dropdown">
                    <i class="bi bi-book"></i> Thể loại
                </button>
                <ul class="dropdown-menu shadow-sm animate__animated animate__fadeIn">
                    @foreach (var loai in (List<string>)ViewBag.TheLoaiList)
                    {
                        <li>
                            <a class="dropdown-item"
                               asp-action="Search"
                               asp-route-filterType="theloai"
                               asp-route-keyword="@loai">
                                @loai
                            </a>
                        </li>
                    }
                </ul>
            </div>

            <!-- Dropdown Tác giả -->
            <div class="dropdown">
                <button class="btn btn-outline-success rounded-pill px-4 d-flex align-items-center gap-2 dropdown-toggle"
                        type="button" data-bs-toggle="dropdown">
                    <i class="bi bi-person-lines-fill"></i> Tác giả
                </button>
                <ul class="dropdown-menu shadow-sm animate__animated animate__fadeIn">
                    @foreach (var tg in (List<string>)ViewBag.TacGiaList)
                    {
                        <li>
                            <a class="dropdown-item"
                               asp-action="Search"
                               asp-route-filterType="tacgia"
                               asp-route-keyword="@tg">
                                @tg
                            </a>
                        </li>
                    }
                </ul>
            </div>

            <!-- Dropdown NXB -->
            <div class="dropdown">
                <button class="btn btn-outline-danger rounded-pill px-4 d-flex align-items-center gap-2 dropdown-toggle"
                        type="button" data-bs-toggle="dropdown">
                    <i class="bi bi-building"></i> NXB
                </button>
                <ul class="dropdown-menu shadow-sm animate__animated animate__fadeIn">
                    @foreach (var nxb in (List<string>)ViewBag.NXBList)
                    {
                        <li>
                            <a class="dropdown-item"
                               asp-action="Search"
                               asp-route-filterType="nxb"
                               asp-route-keyword="@nxb">
                                @nxb
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <!-- DANH SÁCH SÁCH -->
    <div class="row g-4 justify-content-center">
        @if (!Model.Any())
        {
            <div class="col-12 text-center text-muted">
                <p>Không tìm thấy sách phù hợp 😢</p>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 col-6 d-flex justify-content-center">
                    <div class="card book-card border-0 shadow-sm h-100 rounded-4 overflow-hidden">
                        <div class="book-img-wrapper position-relative">
                            <img src="~/images/sach/@(item.HinhAnh ?? "no-image.png")"
                                 class="card-img-top"
                                 style="height:300px; object-fit:cover;"
                                 alt="@item.TenSach" />

                            <div class="overlay d-flex flex-column justify-content-center align-items-center gap-2">
                                <a asp-action="Details" asp-route-id="@item.MaSach"
                                   class="btn btn-light rounded-pill px-3 py-2 shadow-sm w-75 fw-semibold">
                                    <i class="bi bi-eye"></i> Xem chi tiết
                                </a>

                                @if (item.SoLuong > 0)
                                {
                                    @if (userId != null)
                                    {
                                        <form asp-controller="Cart" asp-action="CheckoutNow" method="post"
                                              class="w-100 d-flex justify-content-center">
                                            <input type="hidden" name="maSach" value="@item.MaSach" />
                                            <button type="submit"
                                                    class="btn btn-gradient-primary rounded-pill px-3 py-2 shadow-sm w-75 fw-semibold">
                                                <i class="bi bi-bag-check"></i> Mua ngay
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <a href="/Account/Login"
                                           class="btn btn-gradient-primary rounded-pill px-3 py-2 shadow-sm w-75 fw-semibold">
                                            <i class="bi bi-bag-check"></i> Mua ngay
                                        </a>
                                    }
                                }
                                else
                                {
                                    <span class="badge bg-danger">Hết hàng</span>
                                }
                            </div>
                        </div>
                        <div class="card-body text-center d-flex flex-column justify-content-between">
                            <div>
                                <h6 class="fw-bold text-truncate" title="@item.TenSach">@item.TenSach</h6>
                                <small class="text-muted">✍ @item.TacGias</small>
                            </div>
                            <div class="mt-2">
                                @if (item.SoLuong > 0)
                                {
                                    <p class="fw-bold text-danger mb-0">@item.GiaBan.ToString("n0") ₫</p>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Hết hàng</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<!-- ==================== STYLE ==================== -->
<style>
    body {
        font-family: 'Segoe UI', sans-serif;
        background-color: #f8fafc;
    }

    /* Filter bar */
    .filter-bar {
        transition: all 0.3s ease;
    }

    .filter-bar .btn {
        transition: 0.3s;
    }

    .filter-bar .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 3px 10px rgba(0, 0, 0, 0.1);
    }

    .search-pill input:focus {
        outline: none;
        box-shadow: none;
    }

    .dropdown-menu {
        border-radius: 12px;
        padding: 0.5rem 0;
        font-size: 0.95rem;
        animation-duration: 0.25s;
    }

    .dropdown-item:hover {
        background-color: #f1f3f9;
    }

    /* Book card */
    .book-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .book-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.15);
    }

    .book-img-wrapper {
        position: relative;
        overflow: hidden;
        border-radius: 12px;
    }

    .book-img-wrapper img {
        transition: transform 0.35s ease;
        width: 100%;
    }

    .book-card:hover img {
        transform: scale(1.06);
    }

    .overlay {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.6);
        opacity: 0;
        transition: opacity 0.3s ease;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 0.6rem;
        padding: 0.5rem;
    }

    .book-img-wrapper:hover .overlay {
        opacity: 1;
    }

    .btn-gradient-primary {
        background: linear-gradient(90deg, #007bff, #00b4d8);
        color: #fff;
        border: none;
    }

    .btn-gradient-primary:hover {
        background: linear-gradient(90deg, #0056b3, #0096c7);
        color: #fff;
    }

   
</style>
