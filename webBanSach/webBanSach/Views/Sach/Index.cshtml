@model IEnumerable<webBanSach.ViewModels.SachViewModel>
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Danh sách Sách";
    var userId = HttpContextAccessor.HttpContext?.Session.GetInt32("MaND");
}

<div class="container mt-4">

    <!-- NAV LỌC & TÌM KIẾM -->
    <div class="mb-4 p-3 bg-white rounded shadow-sm border">
        <div class="d-flex flex-wrap gap-3 justify-content-center align-items-center">

            <!-- Form tìm theo tên -->
            <form asp-action="Index" method="get" class="search-form d-flex">
                <div class="input-group">
                    <span class="input-group-text bg-primary text-white">
                        <i class="bi bi-search"></i>
                    </span>
                    <input type="text" name="keyword" value="@ViewBag.Keyword"
                           class="form-control border-primary"
                           placeholder="Tìm sách theo tên..." />
                    <button type="submit" class="btn btn-primary px-4">Tìm</button>
                </div>
            </form>

            <!-- Dropdown Thể loại -->
            <div class="dropdown">
                <button class="btn btn-outline-primary dropdown-toggle rounded-pill px-3" type="button" data-bs-toggle="dropdown">
                    📚 Thể loại
                </button>
                <ul class="dropdown-menu shadow">
                    @foreach (var loai in (List<string>)ViewBag.TheLoaiList)
                    {
                        <li>
                            <a class="dropdown-item" asp-action="Search" asp-route-filterType="theloai" asp-route-keyword="@loai">
                                @loai
                            </a>
                        </li>
                    }
                </ul>
            </div>

            <!-- Dropdown Tác giả -->
            <div class="dropdown">
                <button class="btn btn-outline-success dropdown-toggle rounded-pill px-3" type="button" data-bs-toggle="dropdown">
                    ✍️ Tác giả
                </button>
                <ul class="dropdown-menu shadow">
                    @foreach (var tg in (List<string>)ViewBag.TacGiaList)
                    {
                        <li>
                            <a class="dropdown-item" asp-action="Search" asp-route-filterType="tacgia" asp-route-keyword="@tg">
                                @tg
                            </a>
                        </li>
                    }
                </ul>
            </div>

            <!-- Dropdown NXB -->
            <div class="dropdown">
                <button class="btn btn-outline-danger dropdown-toggle rounded-pill px-3" type="button" data-bs-toggle="dropdown">
                    🏢 NXB
                </button>
                <ul class="dropdown-menu shadow">
                    @foreach (var nxb in (List<string>)ViewBag.NXBList)
                    {
                        <li>
                            <a class="dropdown-item" asp-action="Search" asp-route-filterType="nxb" asp-route-keyword="@nxb">
                                @nxb
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <!-- DANH SÁCH SÁCH -->
    <div class="row g-4 justify-content-center">
        @if (!Model.Any())
        {
            <div class="col-12 text-center text-muted">
                <p>Không tìm thấy sách phù hợp 😢</p>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 col-6 d-flex justify-content-center">
                    <div class="card book-card border-0 shadow-sm h-100">
                        <div class="book-img-wrapper position-relative">
                            <img src="~/images/sach/@(item.HinhAnh ?? "no-image.png")"
                                 class="card-img-top rounded-3"
                                 style="height:300px; object-fit:cover;" alt="@item.TenSach" />

                            <div class="overlay d-flex flex-column justify-content-center align-items-center gap-2">
                                <a asp-action="Details" asp-route-id="@item.MaSach"
                                   class="btn btn-outline-light rounded-pill px-3 py-2 shadow-sm w-75">
                                    <i class="bi bi-eye"></i> Xem chi tiết
                                </a>

                                @if (item.SoLuong > 0)
                                {
                                    @if (userId != null)
                                    {
                                        <form asp-controller="Cart" asp-action="CheckoutNow" method="post" class="w-100 d-flex justify-content-center">
                                            <input type="hidden" name="maSach" value="@item.MaSach" />
                                            <button type="submit" class="btn btn-primary rounded-pill px-3 py-2 shadow-sm w-75">
                                                <i class="bi bi-bag-check"></i> Mua ngay
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <a href="/Account/Login" class="btn btn-primary rounded-pill px-3 py-2 shadow-sm w-75">
                                            <i class="bi bi-bag-check"></i> Mua ngay
                                        </a>
                                    }
                                }
                                else
                                {
                                    <span class="badge bg-danger">Hết hàng</span>
                                }
                            </div>
                        </div>
                        <div class="card-body text-center d-flex flex-column justify-content-between">
                            <div>
                                <h6 class="fw-bold text-truncate">@item.TenSach</h6>
                                <small class="text-muted">✍ @item.TacGias</small>
                            </div>
                            <div class="mt-2">
                                @if (item.SoLuong > 0)
                                {
                                    <p class="fw-bold text-danger mb-0">@item.GiaBan.ToString("n0") ₫</p>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Hết hàng</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    .book-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: flex;
        flex-direction: column;
        width: 100%;
    }

        .book-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 6px 16px rgba(0,0,0,0.25);
        }

    .book-img-wrapper {
        position: relative;
        overflow: hidden;
        border-radius: 12px;
    }

        .book-img-wrapper img {
            transition: transform 0.3s ease;
            width: 100%;
        }

    .book-card:hover img {
        transform: scale(1.05);
    }

    .overlay {
        position: absolute;
        inset: 0;
        background: rgba(0,0,0,0.65);
        opacity: 0;
        transition: opacity 0.3s ease;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        gap: 0.5rem;
        padding: 0.5rem;
    }

    .book-img-wrapper:hover .overlay {
        opacity: 1;
    }

    .book-card .btn {
        font-size: 0.85rem;
    }
</style>
