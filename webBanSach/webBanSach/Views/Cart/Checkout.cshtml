@using webBanSach.ViewModels
@model CheckoutViewModel

@{
    ViewData["Title"] = "Thanh toán";
}

<div class="container py-5">
    <div class="row g-4">
        <!-- ========== FORM ĐẶT HÀNG ========== -->
        <div class="col-lg-8 col-md-7">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-body p-4">
                    <h3 class="fw-bold mb-4 text-primary d-flex align-items-center">
                        <i class="bi bi-credit-card me-2"></i> Thanh toán đơn hàng
                    </h3>

                    <form asp-action="Checkout" method="post" novalidate>
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="MaCode" />

                        <div class="row mb-3">
                            <div class="col-md-6 mb-3 mb-md-0">
                                <label class="form-label fw-semibold">Họ tên người nhận</label>
                                <input asp-for="HoTen" class="form-control rounded-3" readonly />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label fw-semibold">Email</label>
                                <input asp-for="Email" class="form-control rounded-3" readonly />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6 mb-3 mb-md-0">
                                <label asp-for="SDT" class="form-label fw-semibold">Số điện thoại</label>
                                <input asp-for="SDT"
                                       type="tel"
                                       pattern="^[0-9]{9,12}$"
                                       title="Nhập 9-12 chữ số (chỉ số). Ví dụ: 0987123456"
                                       oninput="this.value = this.value.replace(/\D/g,'')"
                                       class="form-control rounded-3"
                                       placeholder="Nhập số điện thoại..." />
                                <small class="text-muted">Chỉ nhập số, 9–12 chữ số.</small>
                                <span asp-validation-for="SDT" class="text-danger small d-block"></span>
                            </div>

                            <div class="col-md-6">
                                <label asp-for="DiaChiGiao" class="form-label fw-semibold">Địa chỉ giao hàng</label>
                                <input asp-for="DiaChiGiao" class="form-control rounded-3" placeholder="Nhập địa chỉ nhận hàng..." />
                                <span asp-validation-for="DiaChiGiao" class="text-danger small d-block"></span>
                            </div>
                        </div>

                        <!-- Phương thức thanh toán -->
                        <div class="mb-4">
                            <label class="form-label fw-bold mb-2">Phương thức thanh toán</label>
                            <div class="p-3 border rounded-3 bg-light d-flex align-items-center">
                                <input class="form-check-input me-2" type="radio" id="cod" name="PaymentMethod" value="COD" checked />
                                <label class="form-check-label" for="cod">
                                    <i class="bi bi-cash-coin text-success me-1"></i> Thanh toán khi nhận hàng (COD)
                                </label>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-success btn-lg w-100 rounded-3 shadow-sm">
                            <i class="bi bi-check-circle me-2"></i> Xác nhận đặt hàng
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <!-- ========== CHI TIẾT ĐƠN HÀNG ========== -->
        <div class="col-lg-4 col-md-5">
            <div class="card border-0 shadow-sm rounded-4 sticky-top" style="top: 80px;">
                <div class="card-header bg-primary text-white fw-semibold rounded-top-4">
                    <i class="bi bi-bag-check me-2"></i> Chi tiết đơn hàng
                </div>

                <div class="card-body bg-light">
                    @if (Model.GioHangs != null && Model.GioHangs.Any())
                    {
                        foreach (var item in Model.GioHangs)
                        {
                            <div class="d-flex align-items-center justify-content-between py-2 border-bottom small">
                                <div class="me-3">
                                    <div class="fw-semibold text-truncate" style="max-width: 200px;">@item.MaSachNavigation.TenSach</div>
                                    <div class="text-muted">SL: @item.SoLuong</div>
                                </div>
                                <div class="fw-bold text-danger text-nowrap">
                                    @String.Format("{0:N0} đ", item.SoLuong * item.MaSachNavigation.GiaBan)
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-center text-muted mt-3">Giỏ hàng trống.</p>
                    }

                    <hr class="my-3" />

                    <!-- Mã khuyến mãi -->
                    <form asp-action="ApplyCoupon" method="post" class="input-group mb-3">
                        @Html.AntiForgeryToken()
                        <input type="text" name="maCode" value="@Model.MaCode"
                               class="form-control rounded-start-3"
                               placeholder="Nhập mã giảm giá..." autocomplete="off" />
                        <button type="submit" class="btn btn-outline-primary rounded-end-3">
                            <i class="bi bi-ticket-perforated me-1"></i> Áp dụng
                        </button>
                    </form>

                    @if (!string.IsNullOrEmpty(Model.MaCode))
                    {
                        if (Model.GiamGia.HasValue && Model.GiamGia > 0)
                        {
                            <div class="alert alert-success py-2 small mb-2 rounded-3">
                                ✅ Đã áp dụng mã <b>@Model.MaCode</b>,
                                giảm <b>@String.Format("{0:N0} đ", Model.GiamGia)</b>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-danger py-2 small mb-2 rounded-3">
                                ❌ Mã khuyến mãi không hợp lệ!
                            </div>
                        }
                    }

                    <div class="d-flex justify-content-between mt-3">
                        <span>Phí giao hàng:</span>
                        <span class="fw-semibold text-success">Miễn phí</span>
                    </div>

                    <hr />

                    <!-- Tổng cộng -->
                    @if (Model.GiamGia.HasValue && Model.GiamGia > 0)
                    {
                        <div class="d-flex justify-content-between">
                            <span class="fw-bold text-muted">Tổng tiền:</span>
                            <span class="text-decoration-line-through">@String.Format("{0:N0} đ", Model.TongTien)</span>
                        </div>
                        <div class="d-flex justify-content-between mt-1">
                            <span class="fw-bold text-danger">Tổng sau giảm:</span>
                            <span class="text-danger fw-bold">@String.Format("{0:N0} đ", Model.TongTienSauGiam)</span>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex justify-content-between fw-bold text-danger">
                            <span>Tổng tiền:</span>
                            <span>@String.Format("{0:N0} đ", Model.TongTien)</span>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Optional: extra client-side check before submit (shows browser validation message if SDT invalid)
        (function () {
            const form = document.querySelector('form[asp-action="Checkout"]') || document.querySelector('form');
            if (!form) return;
            form.addEventListener('submit', function (e) {
                const sdt = form.querySelector('[name="SDT"]');
                if (sdt) {
                    const val = sdt.value.trim();
                    if (val && !/^[0-9]{9,12}$/.test(val)) {
                        e.preventDefault();
                        sdt.focus();
                        alert('Vui lòng nhập Số điện thoại hợp lệ (9–12 chữ số).');
                        return false;
                    }
                }
            });
        })();
    </script>
}
