@model IEnumerable<webBanSach.ViewModels.DonHangViewModel>
@using webBanSach.Models

<h2 class="mb-4 fw-bold">Đơn hàng của tôi</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show rounded" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row g-3">
    @if (!Model.Any())
    {
        <div class="col-12">
            <div class="alert alert-info rounded shadow-sm">
                Bạn chưa có đơn hàng nào.
            </div>
        </div>
    }
    else
    {
        @foreach (var item in Model)
        {
            <div class="col-md-6">
                <div class="card shadow-sm border rounded-3 h-100">
                    <div class="card-header d-flex justify-content-between align-items-center bg-light">
                        <span class="fw-semibold">Đơn hàng #@item.MaDH</span>
                        <span class="badge
                            @(item.TrangThai == "Chờ xử lý" ? "bg-warning text-dark" :
                              item.TrangThai == "Đang giao" ? "bg-info text-dark" :
                              item.TrangThai == "Hoàn tất" ? "bg-success" : "bg-danger")">
                            @item.TrangThai
                        </span>
                    </div>
                    <div class="card-body">
                        <p><strong>Ngày đặt:</strong> @item.NgayDat.ToString("dd/MM/yyyy HH:mm")</p>

                        @* Hiển thị tổng tiền + tổng tiền sau giảm *@
                        @if (item.GiamGia > 0)
                        {
                            <p>
                                <strong>Tổng tiền:</strong><br />
                                <span style="text-decoration:line-through; color:gray;">
                                    @item.TongTien.ToString("N0") VNĐ
                                </span><br />
                                <span style="color:red; font-weight:bold;">
                                    @item.TongTienSauGiam.ToString("N0") VNĐ
                                </span>
                            </p>
                        }
                        else
                        {
                            <p>
                                <strong>Tổng tiền:</strong>
                                <span class="text-danger fw-semibold">
                                    @item.TongTien.ToString("N0") VNĐ
                                </span>
                            </p>
                        }

                        <p><strong>Địa chỉ giao hàng:</strong> @item.DiaChiGiao</p>
                        <a asp-action="Details" asp-route-id="@item.MaDH" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-eye"></i> Chi tiết
                        </a>
                    </div>
                    <div class="card-footer text-end small fst-italic text-muted">
                        @(item.TrangThai == "Hoàn tất" ? "✓ Đã hoàn thành" :
                            item.TrangThai == "Chờ xử lý" ? "Đang chờ xác nhận..." :
                            item.TrangThai == "Đang giao" ? "Đơn hàng đang được giao" :
                            "Đơn hàng đã hủy")
                    </div>
                </div>
            </div>
        }
    }
</div>
