@model webBanSach.ViewModels.DonHangViewModel

<div class="container py-4">
    <h2 class="fw-bold mb-4 text-primary">
        <i class="bi bi-receipt-cutoff me-2"></i> Chi tiết đơn hàng #@Model.MaDH
    </h2>

    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-body">
            <div class="row g-3">
                <div class="col-md-6">
                    <p><strong>Người nhận:</strong> @Model.HoTen</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>SĐT:</strong> @Model.SDT</p>

                </div>
                <div class="col-md-6">
                    <p><strong>Ngày đặt:</strong> @Model.NgayDat.ToString("dd/MM/yyyy HH:mm")</p>
                    <p><strong>Địa chỉ giao hàng:</strong> @Model.DiaChiGiao</p>
                    <p>
                        <strong>Trạng thái:</strong>
                        <span class="badge px-3 py-2 fs-6
                            @(Model.TrangThai == "Chờ xử lý" ? "bg-warning text-dark" :
                              Model.TrangThai == "Đang giao" ? "bg-info text-dark" :
                              Model.TrangThai == "Hoàn tất" ? "bg-success" : "bg-danger")">
                            @Model.TrangThai
                        </span>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-header bg-light fw-semibold">
            <i class="bi bi-book-half me-2"></i> Danh sách sản phẩm
        </div>
        <div class="card-body p-0">
            <table class="table table-striped align-middle mb-0">
                <thead class="table-primary">
                    <tr>
                        <th>Tên sách</th>
                        <th class="text-center">Số lượng</th>
                        <th class="text-center">Đơn giá</th>
                        <th class="text-end">Thành tiền</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ct in Model.ChiTiet)
                    {
                        <tr>
                            <td>@ct.MaSachNavigation.TenSach</td>
                            <td class="text-center">@ct.SoLuong</td>
                            <td class="text-center">@ct.DonGia.ToString("N0") đ</td>
                            <td class="text-end">@((ct.SoLuong * ct.DonGia).ToString("N0")) đ</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 mt-4">
        <div class="card-body">
            @if (Model.TongTienSauGiam < Model.TongTien)
            {
                <p class="mb-1">
                    <strong>Tổng tiền gốc:</strong>
                    <span class="text-muted text-decoration-line-through">@Model.TongTien.ToString("N0") đ</span>
                </p>
                <p class="fw-bold text-danger">Tổng sau giảm: @Model.TongTienSauGiam.ToString("N0") đ</p>
            }
            else
            {
                <p class="fw-bold text-danger mb-0">
                    Tổng tiền: @Model.TongTien.ToString("N0") đ
                </p>
            }
        </div>
    </div>

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary rounded-3">
            <i class="bi bi-arrow-left"></i> Quay lại danh sách
        </a>
    </div>
</div>

<style>
    .table-striped > tbody > tr:nth-of-type(odd) {
        background-color: #f9fbfc;
    }

    .table th, .table td {
        vertical-align: middle !important;
    }
</style>
