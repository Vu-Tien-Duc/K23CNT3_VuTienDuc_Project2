@model webBanSach.ViewModels.HomeViewModel
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    ViewData["Title"] = "Trang Chủ";
    var userName = HttpContextAccessor.HttpContext?.Session.GetString("UserName");
}

<div class="container mt-5">

    <!-- 🏞️ BANNER -->
    <div id="bookCarousel" class="carousel slide mb-5 rounded-4 overflow-hidden shadow-lg" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="https://img.freepik.com/free-photo/stack-books_144627-20260.jpg"
                     class="d-block w-100 banner-img">
                <div class="carousel-caption d-none d-md-flex flex-column align-items-center justify-content-center bg-dark bg-opacity-50 rounded-4 p-4">
                    <div class="d-flex align-items-center justify-content-center mb-2">
                        <img src="~/images/logo.jpg" alt="logo" class="logo-hero me-2">
                        <h3 class="fw-bold text-white mb-0">Web<span class="text-warning">Book</span></h3>
                    </div>
                    <p class="text-light fs-5 fst-italic mb-0">“Khám phá tri thức - Mở rộng tâm hồn”</p>
                </div>
            </div>

            <div class="carousel-item">
                <img src="https://img.freepik.com/free-photo/books-on-wooden-table_144627-20123.jpg"
                     class="d-block w-100 banner-img">
            </div>

            <div class="carousel-item">
                <img src="https://img.freepik.com/free-photo/open-book-with-glasses_144627-20232.jpg"
                     class="d-block w-100 banner-img">
            </div>
        </div>

        <button class="carousel-control-prev" type="button" data-bs-target="#bookCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#bookCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>


    <!-- ✨ CTA Nút -->
    <div class="text-center mb-5">
        <a href="/Sach/Index" class="btn btn-primary btn-lg rounded-pill shadow px-5 py-2 fw-semibold hover-scale">
            <i class="bi bi-book me-2"></i> Khám phá sách ngay
        </a>
    </div>

    <!-- === 🔥 SÁCH NỔI BẬT === -->
    <section class="mb-5">
        <div class="section-header text-warning">
            <h3 class="fw-bold"><i class="bi bi-star-fill me-2"></i>Sách nổi bật</h3>
        </div>

        <div class="row g-4">
            @if (Model.SachNoiBat?.Any() == true)
            {
                foreach (var sach in Model.SachNoiBat)
                {
                    <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 d-flex justify-content-center">
                        <div class="card book-card border-0 shadow-sm hover-card">
                            <div class="position-relative">
                                <img src="~/images/sach/@sach.HinhAnh" alt="@sach.TenSach" class="card-img-top rounded-top-3">
                                <span class="badge bg-warning text-dark position-absolute top-0 start-0 m-2 px-3 py-2 rounded-pill fw-semibold">Hot</span>
                            </div>
                            <div class="card-body text-center d-flex flex-column">
                                <h6 class="fw-bold text-dark text-truncate mb-2">@sach.TenSach</h6>
                                <p class="text-danger fw-bold mb-3">@sach.GiaBan.ToString("N0") ₫</p>

                                <div class="d-grid gap-2 mt-auto">
                                    <a href="/Sach/Details/@sach.MaSach" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-eye me-1"></i> Chi tiết
                                    </a>

                                    @if (!string.IsNullOrEmpty(userName))
                                    {
                                        if (sach.SoLuong > 0)
                                        {
                                            <form asp-controller="Cart" asp-action="Add" method="post">
                                                <input type="hidden" name="maSach" value="@sach.MaSach" />
                                                <button type="submit" class="btn btn-primary btn-sm w-100">
                                                    <i class="bi bi-cart-plus me-1"></i> Thêm vào giỏ
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <button class="btn btn-secondary btn-sm w-100" disabled>Hết hàng</button>
                                        }
                                    }
                                    else
                                    {
                                        <a href="/Account/Login" class="btn btn-primary btn-sm w-100">
                                            <i class="bi bi-box-arrow-in-right me-1"></i> Thêm vào giỏ
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-muted">👉 Hiện chưa có sách nổi bật.</p>
            }
        </div>
    </section>

    <!-- === 💚 SÁCH BÁN CHẠY === -->
    <section class="mb-5">
        <div class="section-header text-success">
            <h3 class="fw-bold"><i class="bi bi-graph-up-arrow me-2"></i>Sách bán chạy</h3>
        </div>

        <div class="row g-4">
            @if (Model.SachBanChay?.Any() == true)
            {
                foreach (var sach in Model.SachBanChay)
                {
                    <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 d-flex justify-content-center">
                        <div class="card book-card border-0 shadow-sm hover-card">
                            <div class="position-relative">
                                <img src="~/images/sach/@sach.HinhAnh" alt="@sach.TenSach" class="card-img-top rounded-top-3">
                                <span class="badge bg-success position-absolute top-0 start-0 m-2 px-3 py-2 rounded-pill fw-semibold">Best Seller</span>
                            </div>
                            <div class="card-body text-center d-flex flex-column">
                                <h6 class="fw-bold text-dark text-truncate mb-2">@sach.TenSach</h6>
                                <p class="text-danger fw-bold mb-3">@sach.GiaBan.ToString("N0") ₫</p>

                                <div class="d-grid gap-2 mt-auto">
                                    <a href="/Sach/Details/@sach.MaSach" class="btn btn-outline-success btn-sm">
                                        <i class="bi bi-eye me-1"></i> Chi tiết
                                    </a>

                                    @if (!string.IsNullOrEmpty(userName))
                                    {
                                        if (sach.SoLuong > 0)
                                        {
                                            <form asp-controller="Cart" asp-action="Add" method="post">
                                                <input type="hidden" name="maSach" value="@sach.MaSach" />
                                                <button type="submit" class="btn btn-success btn-sm w-100">
                                                    <i class="bi bi-cart-plus me-1"></i> Thêm vào giỏ
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <button class="btn btn-secondary btn-sm w-100" disabled>Hết hàng</button>
                                        }
                                    }
                                    else
                                    {
                                        <a href="/Account/Login" class="btn btn-success btn-sm w-100">
                                            <i class="bi bi-box-arrow-in-right me-1"></i> Thêm vào giỏ
                                        </a>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p class="text-muted">👉 Hiện chưa có sách bán chạy.</p>
            }
        </div>
    </section>
</div>

<!-- 🎨 STYLE -->
<style>
    .logo-hero {
        width: 55px;
        height: 55px;
        border-radius: 50%;
        object-fit: cover;
        border: 2px solid #ffc107;
        background-color: #fff;
        transition: transform 0.3s ease;
    }

        .logo-hero:hover {
            transform: rotate(10deg) scale(1.05);
        }

    .carousel-caption {
        bottom: 15%;
    }
    .banner-img {
        height: 380px;
        object-fit: cover;
        filter: brightness(0.85);
        transition: transform 0.6s ease;
    }

    .carousel-item:hover .banner-img {
        transform: scale(1.03);
    }

    .hover-scale:hover {
        transform: scale(1.05);
        transition: all 0.3s ease;
    }

    .section-header {
        display: flex;
        align-items: center;
        margin-bottom: 1.5rem;
        border-bottom: 3px solid currentColor;
        padding-bottom: 0.3rem;
    }

    .book-card {
        width: 100%;
        border-radius: 16px;
        overflow: hidden;
        transition: all 0.3s ease-in-out;
        background-color: #fff;
    }

    .hover-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    }

    .book-card img {
        height: 230px;
        object-fit: cover;
        border-bottom: 1px solid #f0f0f0;
    }

    .book-card h6 {
        font-size: 1rem;
        line-height: 1.4;
        min-height: 42px;
    }

    .book-card .btn {
        border-radius: 10px;
        transition: 0.25s ease;
    }

    .book-card .btn:hover {
        opacity: 0.9;
        transform: translateY(-2px);
    }

    
    
</style>
