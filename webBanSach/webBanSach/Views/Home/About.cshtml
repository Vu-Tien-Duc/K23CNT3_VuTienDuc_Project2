@{
    ViewData["Title"] = "Giới thiệu";
}

<div class="about-page container py-5">
    <!-- Tiêu đề chính -->
    <div class="text-center mb-5">
        <h2 class="fw-bold text-primary mb-3 animate__animated animate__fadeInDown">
            Về Chúng Tôi
        </h2>
        <p class="text-muted fs-5 animate__animated animate__fadeInUp">
            Khám phá hành trình và sứ mệnh của <strong>Nhà Sách DVD</strong> – nơi tri thức hội tụ và lan tỏa.
        </p>
    </div>

    <!-- Giới thiệu -->
    <section class="about-section shadow-sm p-4 p-md-5 rounded-4 mb-5 bg-white">
        <div class="row align-items-center g-4">
            <div class="col-md-6 text-center">
                <img src="~/images/logo.jpg" alt="Nhà Sách DVD" class="img-fluid rounded-4 shadow-sm about-image">
            </div>
            <div class="col-md-6">
                <h4 class="fw-bold text-primary mb-3">Giới thiệu chung</h4>
                <p class="text-secondary">
                    <strong>Nhà Sách DVD</strong> là hệ thống bán sách trực tuyến cung cấp hàng ngàn đầu sách chất lượng
                    thuộc nhiều lĩnh vực như <em>văn học, kỹ năng sống, công nghệ, thiếu nhi</em> và hơn thế nữa.
                </p>
                <p class="text-secondary mb-0">
                    Với phương châm <em>"Sách hay - Giá tốt - Phục vụ tận tâm"</em>, chúng tôi không ngừng phát triển
                    để mang lại trải nghiệm mua sắm tuyệt vời nhất cho độc giả Việt.
                </p>
            </div>
        </div>
    </section>

    <!-- Tầm nhìn -->
    <section class="vision-section shadow-sm p-4 p-md-5 rounded-4 mb-5 bg-light border-start border-success border-4">
        <h4 class="fw-bold text-success mb-3"><i class="bi bi-eye me-2"></i>Tầm nhìn</h4>
        <p class="text-secondary fs-5 mb-0">
            Trở thành nền tảng sách trực tuyến hàng đầu Việt Nam – nơi mọi người dễ dàng tiếp cận tri thức,
            truyền cảm hứng đọc sách và lan tỏa văn hóa học tập suốt đời.
        </p>
    </section>

    <!-- Sứ mệnh -->
    <section class="mission-section shadow-sm p-4 p-md-5 rounded-4 mb-5 bg-light border-start border-warning border-4">
        <h4 class="fw-bold text-warning mb-3"><i class="bi bi-bullseye me-2"></i>Sứ mệnh</h4>
        <ul class="list-unstyled fs-5 text-secondary mb-0">
            <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i> Cung cấp đầu sách đa dạng, cập nhật nhanh chóng.</li>
            <li class="mb-2"><i class="bi bi-check-circle-fill text-success me-2"></i> Đem lại trải nghiệm mua sắm tiện lợi và thân thiện.</li>
            <li><i class="bi bi-check-circle-fill text-success me-2"></i> Phục vụ khách hàng tận tâm, chuyên nghiệp và hiệu quả.</li>
        </ul>
    </section>

    <!-- Liên hệ -->
    <section class="contact-section shadow-sm p-4 p-md-5 rounded-4 bg-white border-start border-danger border-4">
        <h4 class="fw-bold text-danger mb-4">
            <i class="bi bi-telephone me-2"></i>Liên hệ với chúng tôi
        </h4>

        <div class="row g-4">
            <!-- Thông tin liên hệ -->
            <div class="col-md-6">
                <div class="p-4 bg-light rounded-3 shadow-sm h-100">
                    <p class="mb-2">
                        <i class="bi bi-geo-alt text-danger me-2"></i>
                        <strong>Địa chỉ:</strong> 28A, đường Lê Trọng Tấn, Hà Đông, Hà Nội
                    </p>
                    <p class="mb-2">
                        <i class="bi bi-telephone text-info me-2"></i>
                        <strong>Điện thoại:</strong> 0987 654 321
                    </p>
                    <p class="mb-0">
                        <i class="bi bi-envelope text-warning me-2"></i>
                        <strong>Email:</strong> sach24@nhasachdvd.vn
                    </p>
                </div>
            </div>

            <!-- Liên kết ngoài -->
            <div class="col-md-6">
                <div class="p-4 bg-light rounded-3 shadow-sm h-100">
                    <p class="mb-2">
                        <i class="bi bi-globe text-primary me-2"></i>
                        <strong>Website:</strong>
                        <a asp-controller="Home" asp-action="Index" class="text-decoration-none text-primary fw-semibold">
                            www.nhasachdvd.vn
                        </a>
                    </p>
                    <p class="mb-0">
                        <i class="bi bi-facebook text-primary me-2"></i>
                        <strong>Facebook:</strong>
                        <a href="#" class="text-decoration-none text-primary fw-semibold">
                            facebook.com/nhasachdvd
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </section>
</div>

@section Styles {
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />
    <style>
        /* Cơ bản */
        body {
            background-color: #f9fafc;
        }

        .about-page h2 {
            letter-spacing: 1px;
        }

        /* Ảnh logo */
        .about-image {
            max-height: 260px;
            object-fit: cover;
            transition: transform 0.4s ease;
        }

        .about-image:hover {
            transform: scale(1.05);
        }

        /* Hiệu ứng xuất hiện khi cuộn */
        .about-section, .vision-section, .mission-section, .contact-section {
            opacity: 0;
            transform: translateY(20px);
            transition: all 0.7s ease;
        }

        .visible {
            opacity: 1;
            transform: translateY(0);
        }

      
    </style>
}

@section Scripts {
    <script>
        // Hiệu ứng xuất hiện khi cuộn (scroll reveal)
        document.addEventListener("scroll", function () {
            const sections = document.querySelectorAll(".about-section, .vision-section, .mission-section, .contact-section");
            sections.forEach(section => {
                const rect = section.getBoundingClientRect();
                if (rect.top < window.innerHeight - 100) {
                    section.classList.add("visible");
                }
            });
        });
    </script>
}
