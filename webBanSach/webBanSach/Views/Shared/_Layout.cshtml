@{
    Layout = null;
}
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@inject WebBanSachContext _context

@{
    var theLoais = _context.TheLoais.ToList();
    var tacGias = _context.TacGias.ToList();
    var nxbList = _context.NhaXuatBans.ToList();
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebBanSach</title>

    <!-- Bootstrap & Icon -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

    <!-- CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/layoutUser.css" rel="stylesheet" />

   
</head>
<body>
    <!-- HEADER -->
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show position-fixed top-0 start-50 translate-middle-x mt-3" style="z-index: 1050; min-width: 300px;">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <nav class="navbar navbar-expand-lg shadow-sm" style="background-color: #0d6efd;">
        <div class="container">
            <a class="navbar-brand fw-bold text-white d-flex align-items-center" asp-controller="Home" asp-action="Index">
                <img src="~/images/logo.jpg" alt="logo" height="40px" width="40px" class="me-2" />
                WebBanSach
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- Menu trái -->
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Trang chủ</a></li>

                    <!-- Dropdown Sách -->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">Sách</a>

                        <ul class="dropdown-menu p-3" style="min-width: 250px;">
                            <!-- Link Trang chủ sách -->
                            <li>
                                <a class="dropdown-item text-primary fw-bold" asp-controller="Sach" asp-action="Index">
                                    Trang chủ sách
                                </a>
                            </li>
                            <li>

                                <h6 class="dropdown-header">Thể loại</h6>
                                @foreach (var tl in theLoais)
                                {
                                    <a class="dropdown-item"
                                       asp-controller="Sach" asp-action="Search"
                                       asp-route-filterType="theloai" asp-route-keyword="@tl.TenLoai">
                                        @tl.TenLoai
                                    </a>
                                }
                            </li>
                            <li>
                                <h6 class="dropdown-header">Tác giả</h6>
                                @foreach (var tg in tacGias)
                                {
                                    <a class="dropdown-item"
                                       asp-controller="Sach" asp-action="Search"
                                       asp-route-filterType="tacgia" asp-route-keyword="@tg.TenTG">
                                        @tg.TenTG
                                    </a>
                                }
                            </li>
                            <li>
                                <h6 class="dropdown-header">Nhà xuất bản</h6>
                                @foreach (var nxb in nxbList)
                                {
                                    <a class="dropdown-item"
                                       asp-controller="Sach" asp-action="Search"
                                       asp-route-filterType="nxb" asp-route-keyword="@nxb.TenNXB">
                                        @nxb.TenNXB
                                    </a>
                                }
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="About">Giới thiệu</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Contact">Liên hệ</a></li>
                </ul>

                <!-- Menu phải -->
                <ul class="navbar-nav">
                    <!-- Giỏ hàng icon only -->
                    <li class="nav-item me-3">
                        @{
                            var userId = HttpContextAccessor.HttpContext?.Session.GetInt32("MaND");
                            var cartCount = HttpContextAccessor.HttpContext?.Session.GetInt32("CartCount") ?? 0;
                        }

                        @if (userId != null)
                        {
                            <a class="nav-link position-relative" asp-controller="Cart" asp-action="Index">
                                <i class="bi bi-cart fs-5"></i>
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                    @cartCount
                                </span>
                            </a>
                        }
                        else
                        {
                            <a class="nav-link position-relative" asp-controller="Account" asp-action="Login">
                                <i class="bi bi-cart fs-5"></i>
                                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger">
                                    0
                                </span>
                            </a>
                        }
                    </li>



                    <!-- User -->
                    @if (!string.IsNullOrEmpty(HttpContextAccessor.HttpContext?.Session.GetString("UserName")))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown">
                                @{
                                    var avatar = HttpContextAccessor.HttpContext.Session.GetString("UserAvatar") ?? "/images/nguoidung/default.jpg";
                                }
                                <img src="@avatar" alt="avatar" class="rounded-circle me-2" style="width:32px;height:32px;object-fit:cover;" />
                                @HttpContextAccessor.HttpContext.Session.GetString("UserName")
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile">Thông tin cá nhân</a></li>
                                <li><a class="dropdown-item" asp-controller="Account" asp-action="Logout">Đăng xuất</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Login">Đăng nhập</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Account" asp-action="Register">Đăng ký</a></li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- MAIN -->
    <main class="container mt-4">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="bg-light text-dark mt-5 pt-4 pb-3 border-top">
        <div class="container">
            <div class="row">
                <div class="col-md-4 mb-3">
                    <h5 class="fw-bold">📚 WebBanSach</h5>
                    <p>Địa chỉ: 123 Nguyễn Văn Cừ, Hà Nội</p>
                    <p>Giấy phép KD: 0101234567</p>
                </div>
                <div class="col-md-4 mb-3">
                    <h6 class="fw-bold">Dịch vụ</h6>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="About" class="text-decoration-none text-dark">Giới thiệu</a></li>
                        <li><a href="#" class="text-decoration-none text-dark">Chính sách bảo mật</a></li>
                        <li><a href="#" class="text-decoration-none text-dark">Điều khoản sử dụng</a></li>
                    </ul>
                </div>
                <div class="col-md-4 mb-3">
                    <h6 class="fw-bold">Liên hệ</h6>
                    <p>📞 0123 456 789</p>
                    <p>✉️ support@webbansach.com</p>
                </div>
            </div>
            <div class="text-center small text-muted mt-3">
                © 2025 - WebBanSach. All rights reserved.
            </div>
        </div>
    </footer>

    <!-- Script -->
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
