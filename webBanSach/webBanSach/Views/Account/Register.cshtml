@model webBanSach.ViewModels.RegisterVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Đăng ký - Nhà Sách DVD</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Icon -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />

    <style>
        body {
            background: linear-gradient(135deg, #74b9ff, #a29bfe);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: "Poppins", sans-serif;
        }

        .register-card {
            background: #fff;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            padding: 40px 30px;
            width: 100%;
            max-width: 480px;
            transition: 0.3s;
        }

        .register-card:hover {
            transform: translateY(-3px);
            box-shadow: 0 12px 35px rgba(0,0,0,0.15);
        }

        .register-card h3 {
            font-weight: 700;
            color: #2d3436;
            margin-bottom: 25px;
        }

        .form-label {
            font-weight: 600;
            color: #2d3436;
        }

        .form-control {
            border-radius: 10px;
            padding: 10px 14px;
            border: 1px solid #ced6e0;
            transition: all 0.3s ease;
        }

        .form-control:focus {
            border-color: #0984e3;
            box-shadow: 0 0 0 0.15rem rgba(9,132,227,0.25);
        }

        .btn-custom {
            background: linear-gradient(90deg, #0984e3, #6c5ce7);
            border: none;
            color: #fff;
            font-weight: 600;
            border-radius: 10px;
            transition: 0.3s;
            padding: 10px;
        }

        .btn-custom:hover {
            background: linear-gradient(90deg, #74b9ff, #a29bfe);
            color: #fff;
            transform: translateY(-1px);
        }

        .text-small {
            font-size: 0.9rem;
        }

        .icon-input {
            position: relative;
        }

        .icon-input i {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
        }

        .icon-input input {
            padding-left: 35px;
        }

      
        }
    </style>
</head>
<body>
    <div class="register-card">
        <h3 class="text-center">
            <i class="bi bi-person-plus-fill text-primary me-2"></i>
            Đăng ký tài khoản
        </h3>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }

        <form asp-action="Register" method="post" novalidate>
            @Html.AntiForgeryToken()

            <div class="mb-3 icon-input">
                <i class="bi bi-person"></i>
                <input asp-for="HoTen" class="form-control" placeholder="Họ và tên" />
                <span asp-validation-for="HoTen" class="text-danger"></span>
            </div>

            <div class="mb-3 icon-input">
                <i class="bi bi-envelope"></i>
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3 icon-input">
                <i class="bi bi-lock"></i>
                <input asp-for="MatKhau" type="password" class="form-control" placeholder="Mật khẩu" />
                <span asp-validation-for="MatKhau" class="text-danger"></span>
            </div>

            <div class="mb-3 icon-input">
                <i class="bi bi-lock-fill"></i>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Nhập lại mật khẩu" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="mb-3 icon-input">
                <i class="bi bi-telephone"></i>
                <input asp-for="SDT" class="form-control" placeholder="Số điện thoại" />
                <span asp-validation-for="SDT" class="text-danger"></span>
            </div>

            <div class="mb-3 icon-input">
                <i class="bi bi-geo-alt"></i>
                <input asp-for="DiaChi" class="form-control" placeholder="Địa chỉ" />
                <span asp-validation-for="DiaChi" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-custom w-100 mt-2">
                <i class="bi bi-check-circle me-1"></i> Đăng ký
            </button>
        </form>

        <p class="text-center mt-3 text-small">
            Đã có tài khoản? <a asp-action="Login" asp-controller="Account" class="fw-semibold text-decoration-none text-primary">Đăng nhập</a>
        </p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
