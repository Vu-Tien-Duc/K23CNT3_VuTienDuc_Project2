@model webBanSach.ViewModels.LoginVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Đăng nhập - Nhà Sách DVD</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet" />
    <style>
        body {
            background: linear-gradient(135deg, #e0f0ff, #f5f9ff);
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            font-family: "Segoe UI", sans-serif;
        }

        .login-card {
            width: 400px;
            max-width: 90%;
            background: #fff;
            border: none;
            border-radius: 20px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
            padding: 40px 35px;
            transition: all 0.4s ease;
        }
        .login-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        }

        .login-header {
            text-align: center;
            margin-bottom: 25px;
        }
        .login-header img {
            width: 70px;
            height: 70px;
            border-radius: 50%;
            margin-bottom: 10px;
            border: 2px solid #0d6efd;
            padding: 5px;
        }

        .form-control {
            border-radius: 10px;
            padding-left: 40px;
        }
        .input-group-text {
            background: transparent;
            border: none;
            position: absolute;
            left: 10px;
            top: 50%;
            transform: translateY(-50%);
            color: #6c757d;
        }

        .btn-login {
            background: linear-gradient(90deg, #007bff, #00b4ff);
            border: none;
            border-radius: 10px;
            color: white;
            font-weight: 500;
            transition: all 0.3s ease;
        }
        .btn-login:hover {
            background: linear-gradient(90deg, #0062cc, #0096d6);
            transform: translateY(-2px);
        }

        .alert {
            border-radius: 10px;
            font-size: 0.9rem;
        }

        .register-text {
            margin-top: 15px;
            font-size: 0.95rem;
        }
        .register-text a {
            color: #007bff;
            font-weight: 500;
            text-decoration: none;
        }
        .register-text a:hover {
            text-decoration: underline;
        }

      
        }
    </style>
</head>

<body>
    <div class="login-card">
        <div class="login-header">
            <img src="~/images/logo.jpg" alt="Logo" />
            <h4 class="fw-bold text-primary mb-0">Đăng nhập</h4>
            <p class="text-secondary small mb-0">Chào mừng bạn quay lại Nhà Sách DVD 📚</p>
        </div>

        @* ✅ Thông báo khi đăng ký thành công *@
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @* ❌ Thông báo lỗi đăng nhập *@
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>@ViewBag.Error
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <form asp-action="Login" method="post">
            @Html.AntiForgeryToken()

            <div class="mb-3 position-relative">
                <i class="bi bi-envelope input-group-text"></i>
                <input asp-for="Email" class="form-control" placeholder="Nhập email của bạn" />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>

            <div class="mb-3 position-relative">
                <i class="bi bi-lock input-group-text"></i>
                <input asp-for="MatKhau" type="password" class="form-control" placeholder="Nhập mật khẩu" />
                <span asp-validation-for="MatKhau" class="text-danger small"></span>
            </div>

            <button type="submit" class="btn btn-login w-100 py-2 mt-2">
                <i class="bi bi-box-arrow-in-right me-1"></i> Đăng nhập
            </button>
            <p class="text-center mt-2">
                <a asp-action="ForgotPassword" asp-controller="Account" class="text-decoration-none">Quên mật khẩu?</a>
            </p>

        </form>

        <p class="text-center register-text">
            Chưa có tài khoản? <a asp-action="Register" asp-controller="Account">Đăng ký ngay</a>
        </p>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
</body>
</html>
