@model webBanSach.ViewModels.ProfileVM
@{
    ViewData["Title"] = "Đổi mật khẩu";

}

<h4 class="mb-4">🔑 Đổi mật khẩu</h4>

@if (ViewBag.Success != null)
{
    <div class="alert alert-success">@ViewBag.Success</div>
}
@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<form asp-action="ChangePassword" method="post">
    <div class="mb-3">
        <label class="form-label">Mật khẩu cũ</label>
        <input asp-for="MatKhauCu" type="password" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Mật khẩu mới</label>
        <input asp-for="MatKhauMoi" type="password" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Xác nhận mật khẩu</label>
        <input asp-for="XacNhanMatKhau" type="password" class="form-control" />
        <span asp-validation-for="XacNhanMatKhau" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success px-4">✅ Đổi mật khẩu</button>
</form>
